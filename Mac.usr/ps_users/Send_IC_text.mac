 /*Обработчик диалоговой панели ввода исходных данных для печати*/
MACRO EventIC (dlg, cmd, id, key) 

  var const_mess = "~F2~/~F9~ - Отправить, ~Gtrl+G~ - Сгенерировать сообщение о справках";

  if(cmd == DLG_INIT)
    dlg.rec.client = client;
    dlg.rec.number = 1;
    dlg.rec.text="";
    
    UpdateFields(dlg); 
  elif (cmd==DLG_SETFOCUS)
    if (FldName(dlg,id)=="Number") 
      message(" Номер cообщения "+const_mess);
    elif (FldName(dlg,id)=="Text")
      message(" Текст сообщения "+const_mess);
    end;
  elif (cmd == DLG_KEY)
    if (KEY == KEY_ESC)
      return exit(1);//CM_CANCEL;
    elif (key == KEY_CTRL_G)
      if (seting_text == "")
        dlg.rec.text = "УВЕДОМЛЕНИЕ. \nСправки по Вашему запросу ГОТОВЫ. \nДокументы можно получить в обслуживающем Вас офисе.";
      else
        dlg.rec.text = seting_text;
      end;
      UpdateFields(dlg);
    elif (( KEY == KEY_F2 ) or (KEY == KEY_F9))
      text  = dlg.rec.text;
      number = dlg.rec.number;
      Return CM_SAVE;
    else
      Return CM_DEFAULT;
    end;
  end;
        
END;

/*Точка входа в макрос*/
Macro Send_text_ic(cl)

  GetRegistryValue("BANK_INI\\ОБЩИЕ ПАРАМЕТРЫ\\ДИРЕКТОРИИ\\LBRDIR",2,outlIC);
  FulloutputlIC = FindPath(outputlIC, outlIC);
  if (not FulloutputlIC)
    msgbox("Не найдена LBR");
    exit();
  end;

  GetRegistryValue("PRBB\\INTERBANK\\MESSAGE_TEXT", 6, seting_text, setting_error);
  if (setting_error != 0)
    seting_text = "";
  end;

  var dlgIC = TRecHandler("send", fulloutputlIC, TRUE); 
  private var cmd = rsdcommand("select t_code from dobjcode_dbt where t_objectid = ? and t_codekind = 1 and t_state = 0");
  cmd.addparam("ID",RSDBP_IN,cl);
  cmd.execute();
  private var rsd = rsdrecordset(cmd);
  if (rsd.movenext())
    client = rsd.value("t_code");
  else
    return 0;
  end;
  if (RunDialog(dlgIC, "EventIC"))
    if (gettrue(true, "Отправить сообщение номер: "+int(number)+"|"+text+"|"+"Клиенту:"+client))
      //Gurin S. I-00554545-2 03.03.2015 добавил экранирование
      ОтправкаСообщения(PutDoubleQoute(text), cl, number, client);
    end;
  end;
end;
