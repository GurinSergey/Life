Macro КомуПлановая(PaymentObj)
   //Seleznev плановая всем почтовым и всем в будущую ДПП за исключением помещаемых на СНР
   If ((PaymentObj.PaymentKind == "П") or ((PaymentObj.OutTransferDate > {curdate}) AND (CheckUnFin(PaymentObj, false)) ))
      return true;
   End;

   return false;

End;