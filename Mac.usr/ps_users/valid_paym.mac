import rsd;


/* Получаем сумму платежа по дебету - в списании (2) или по кредиту - в зачислении (1) */
macro GetValidSum(paym, kind, sum_ord, flag)

var q, field, cmd, rs, ret;

ret = $0;

if(flag == -1)

  if   (kind == 2)
    field = "t_amount";
  elif (kind == 1)
    field = "t_payamount";
  end;

q = "SELECT "+field+" FROM dpmpaym_dbt WHERE t_paymentid="+paym;
cmd = RsdCommand(q);
cmd.execute();
rs = RsdRecordSet(cmd);

  if(rs.MoveNext())
    ret = money(rs.Value(0));
  end;

else

 ret = sum_ord;

end;

return ret;

end;


/* Получаем 3-значный цифровой код валюты платежа по дебету - в списании (2) или по кредиту - в зачислении (1) */
macro GetValidFICode(paym, kind)

var q, field, cmd, rs, ret;

ret = "000";

/* Первым действием все-таки анализируем валюту контракта */
/* EVG Косяк. Записи в dpmco_dbt может и не быть.
q = "SELECT t_contractfiid FROM dpmco_dbt WHERE t_paymentid = "+paym;*/
q = "SELECT NVL(t_contractfiid, -1) FROM dpmco_dbt WHERE t_paymentid = "+paym;
cmd = RsdCommand(q);
cmd.execute();
rs = RsdRecordSet(cmd);

if((rs.MoveNext()) and (rs.value(0) != -1))
  q = "SELECT t_fi_code FROM dfininstr_dbt WHERE t_fiid = "+rs.Value(0);
  cmd = RsdCommand(q);
  cmd.execute();
  rs = RsdRecordSet(cmd);

  if(rs.MoveNext())
    ret = trim(string(rs.Value(0)));
  end;

else

/* Если не задана валюта контракта , анализируется одна из валют платежа */
  if   (kind == 2)
    field = "t_fiid";
  elif (kind == 1)
    field = "t_payfiid";
  end;

  q = "SELECT fi.t_fi_code FROM dpmpaym_dbt paym, dfininstr_dbt fi WHERE paym.t_paymentid="+paym+" AND fi.t_fiid = paym."+field;
  cmd = RsdCommand(q);
  cmd.execute();
  rs = RsdRecordSet(cmd);

    if(rs.MoveNext())
      ret = trim(string(rs.Value(0)));
    end;

end;

return ret;

end;