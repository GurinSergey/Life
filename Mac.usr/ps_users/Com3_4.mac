
/*Kozina шаг для выбора пункта тарифа 3.4*/

import rsd, PTInter;
import cbsttls;

var PaymentObj:RsbPayment;

MACRO ExecuteStep( doc, paymDoc )
  var attrid;
  var m = 0;
  array mn;
  var cmd;

  if( (PaymentObj.dockind == PS_PAYORDER) and (PaymentObj.ShifrOper == "01") and (time > time(14,00)))

    mn(0) = "3.4.2 - прочие платежи, принятые до 14-00 на бумажных носителях";
    mn(1) = "3.4.3 - прочие платежи, принятые с 14-00 до 15-00 на бумажных носителях";
    mn(2) = "3.4.4 - прочие платежи, принятые с 15-00 до 16-00 на бумажных носителях";

    m = menu(mn,"Платеж после 14:00. Выберите пункт тарифа",null);
    if(m == 1)
       attrid = 1;
    elif(m == 2)
       attrid = 2;
    end;
    if(m > 0)
    cmd = RsdCommand("delete from dobjatcor_dbt where t_objecttype = 501 and t_groupid = 10 and t_object = lpad('" + PaymentObj.PaymentID + "', 10,0)");
    cmd.Execute();
    cmd = RsdCommand( "insert into dobjatcor_dbt(t_objecttype, t_groupid, t_attrid, t_object, t_general, t_validfromdate, t_validtodate, t_oper) " + 
          "values(501, 10, " + attrid + ", lpad('" + PaymentObj.PaymentID + "', 10,0), 'X', to_date('" + date + 
          "','dd.mm.yyyy'), to_date('31.12.9999','dd.mm.yyyy')," + {oper} + ")");
    cmd.Execute();

    end;
 end;

    if( УстановитьСтатусыПлатежа( OPR_PAYM_CONTROL, OPR_PAYM_ST_CTRL_CONTROL ) )
      msgbox("Ошибка при установке сегментов статуса экземпляра операции");
      return 1;
    end;

  return 0;
END;
