/* Процедура вывода строки отчета */
macro ПечататьСтроку(Rep, rs, n)

  Rep.AddPrintCell(n, 6, 0, "r");
  if (rs.Value("transdate") != " 1.01.0001 (00:00:00.00)")
  Rep.AddPrintCell(date(rs.Value("transdate")), 10, 0, "c");
  else
  Rep.AddPrintCell("", 10, 0, "c");
  end;
  Rep.AddPrintCell(date(rs.Value("valuedate")), 10, 0, "c");
  Rep.AddPrintCell(string(rs.Value("num")), 10, 0, "r");
  Rep.AddPrintCell(string(rs.Value("receiver")), 30, 0, "l");
  Rep.AddPrintCell(string(rs.Value("rec_acnt")), 22, 0, "c");
  Rep.AddPrintCell(string(rs.Value("sum")), 15, 0, "r");
  Rep.AddPrintCell(string(rs.Value("payer")), 30, 0, "l");
  Rep.AddPrintCell(string(rs.Value("pay_acnt")), 22, 0, "c");
  Rep.AddPrintCell(string(rs.Value("ground")), 60, 0, "l");
  Rep.AddPrintCell(int(rs.Value("id")), 10, 0, "l");

  Rep.AddStr();

end;


/* Напечатать отчет */
macro PrintRep()

var Header, Rep;
var cmd, rs;

var i = 0;
var AcntNer, err, nd, dep, rep_hdr;
var pmobj;

rep_hdr = "Платежи по поступлению RUR от нерезидентов в";

rs = GetData();

Header = Заголовок();
Rep = CMakeReport(Header);

  if(int(node) == 1)
    dep = "";
  else
    dep = " подразделении";
  end;
debugbreak;
  if( dl.rec.startdate == dl.rec.enddate)
    Rep.AddPrintCell(rep_hdr + dep + " \"" + dl.rec.nodename + " \  за " + dl.rec.startdate, 235, 0, "l:ex_FS(b)", Rep_Elem_Str);
    Rep.addStr(); //30.01.2014 DPN  
  else
    Rep.AddPrintCell(rep_hdr + dep + " \"" + dl.rec.nodename + "\  за период с " + dl.rec.startdate + " по " + dl.rec.enddate, 235, 0, "l:ex_FS(b)", Rep_Elem_Str);
  end;

  Rep.AddEmptyStr();
  Rep.AddEmptyStr();

  initprogress(-1,"Идет формирование отчета","Идет формирование отчета");
  while(rs.MoveNext())

    /* EVG 29/1/2014 Фильтрация по счетам теперь здесь,
       чтобы не умирал запрос в GetData(). */
    var racBal1 = subStr( rs.Value("rec_acnt", null, V_STRING), 1, 3 ),
        racBal2 = subStr( rs.Value("rec_acnt", null, V_STRING), 1, 5 );
    if( (( racBal1 > "401" ) and ( racBal1 < "408" ))
        or ( racBal2 == "40802" ) )

       if(int(node) != 1)
         //debugbreak;
         pmobj = RsbPayment(int(rs.Value("id")));
         nd = GetPmTSNode(pmobj);
         if(int(nd) == int(node))
           ПечататьСтроку(Rep, rs, i+3);
           i = i + 1;
         end;
       else
         ПечататьСтроку(Rep, rs, i+3);
         i = i + 1;
       end;

    end;
    useprogress(i);

  end;
  remprogress;

  if (i > 0)
  debugbreak;
    Rep.PrintWinRep("Поступления RUR от нерезидентов");
    Rep.ShowWinRep();
  else
    MsgBox("Нет данных для отчета");
  end;


end;                                                                   

/* ---------------------------------------------------------------------- */
macro ProcessDialog(dlg, cmd, id, key)

var pr = TBFile("party");

  if(cmd == DLG_KEY)

     if(key == 317) /* F3 */
       if  (id == 0) /* Дата начала периода */
         dlg.rec.startdate = GetDateByCalendar({curdate});
       elif  (id == 1) /* Дата окончания периода */
         dlg.rec.enddate = GetDateByCalendar({curdate});
       elif  (id == 2) /* Узел ТС */
         ListDepartment(dp);
         dlg.rec.node = dp.rec.code;
         pr.KeyNum = 0;
         pr.rec.partyid = dp.rec.partyid;
         pr.GetEQ();
         dlg.rec.nodename = dp.rec.name + " - " + pr.rec.name;
         UpdateFields(dlg);
       end;
     elif  (key == 316) /* F2 */
       return CM_SAVE;
     elif(key == 27)  /* ESC */
       exit(1);
     end;

  end;

end;

