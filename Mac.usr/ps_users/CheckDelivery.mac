var cmd, rs, query, sql, params, KindID;

  sql = "  SELECT 1 ";
  if (ScrollID == 1) // Из скроллинга заявлений на открытие счета
    sql = sql + " FROM dreqopena_dbt t, ";
  elif (ScrollID == 2) // Из скроллинга заявлений на закрытие счета
    sql = sql + " FROM dreqclosa_dbt t, ";
