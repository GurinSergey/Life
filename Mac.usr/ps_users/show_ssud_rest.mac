import rsd;

private var col = TArray;
private var query, cmd, rs;

private macro AddCol (ar, ind, fld, head, width, rdonly, DecPoint, Point)
   ar.value (ind * 6 + 0)      = fld;
   ar.value (ind * 6 + 1)      = head;
   ar.value (ind * 6 + 2)      = width;
   ar.value (ind * 6 + 3)      = DecPoint;
   ar.value (ind * 6 + 4)      = Point;
end;   


macro show_ssud_Rest(p_acc)
    query = "  SELECT   t_account acc, t_date_value dat, t_rest rest, t_oper oper"
            "    FROM   usr_ssud_rest_dbt "
            "   WHERE   t_account = :acc "
            "ORDER BY   dat ";
    cmd = RsdCommand (query);
    cmd.AddParam("acc", RSDBP_IN, p_acc);
    cmd.execute();

    AddCol (col, 0, "acc",    "Счет",         25, true, 0);
    AddCol (col, 1, "dat",    "Дата",         10, true, 0);
    AddCol (col, 2, "rest",   "Остаток",      10, true, 0);
    AddCol (col, 3, "oper",   "Операционист", 10, true, 0);

    rs = RSDRecordset(cmd, RSDVAL_CLIENT, RSDVAL_STATIC);

    if (rs.moveNext ())
        RunScroll (rs, 4, col, null, null, "Остатки ссудных средств", "~Esc~ Выйти ", null, null, null, 65, 200);
    else
        msgbox("По этому счету клиента нет ссудной задолженности");
    end;
end;

