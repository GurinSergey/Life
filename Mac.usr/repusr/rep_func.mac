// макрос проверки каждого символа  ValidateSymb (допускаются только цифры )
//----------------------------------------------------------------------------
macro ValidateSymb(ch, CharSet )
  var i = 1, chset = "";
  while(i <= strlen(CharSet))
    chset = SubStr(CharSet, i, 1);
    if( ch == chset)
      return TRUE;
    end;
    i = i + 1;
  end;
  return FALSE;
end;
//----------------------------------------------------------------------------

//макрос обработки кода  при вводе недопустимых символов  (сравнение символов с допустимыми)
//----------------------------------------------------------------------------
macro StrNotValid(srcStr)
  var i, Len, curSymb, dstStr = "";

  Len = strlen(srcStr);
  i = 1;
  while(i <= Len)
    curSymb = substr(srcStr, i, 1);
    if (ValidateSymb(curSymb, ValidSet) == false)
      return false; 
    end;
    i = i+1;
  end;
return true;
end;
