 /*Обработчик диалоговой панели ввода исходных данных для печати*/
MACRO Event (dlg, cmd, id, key) 

   var const_mess = "~F2~ Продолжить ~ESC~ Выход ";
   var const_mess2 = "~F2~ Продолжить ~SPACE~ ~ESC~ Выход ";

   /*Первоначальная инициализация полей*/
   if(cmd == DLG_INIT)
      dlg.rec.Oper  ="";
      dlg.rec.OperName = "";
      dlg.rec.BalAcc = "405, 406, 407, 408, 409";
      dlg.rec.Account = "";
      dlg.rec.ClientID="";
      dlg.rec.ClientName = "";
      UpdateFields(dlg); 
   end;
   
   /*Установка подсказок в строке состояния*/
   if (cmd==DLG_SETFOCUS)
     if (FldName(dlg,id)=="Oper") 
       message(" ~F3~ Список операционистов "+const_mess2);
     elif (FldName(dlg,id)=="BalACC")
       message(const_mess);
     elif (FldName(dlg,id)=="Account")
       message(" ~F3~ Выбор счета "+const_mess2);
    end;
   end;
   
   if (cmd == DLG_REMFOCUS)
     /*Проверка корректности дат отчета*/
     if (FldName(dlg,id) == "Account")
       if (( dlg.rec.BalAcc != "" ) and (strlen (dlg.rec.account)>2))
         MsgBox("При выпуске отчета по одному лицевомц балансовые не учитываются");
//        return CM_CANCEL;
        end;
     end;
      UpdateFields(dlg); 
   end;

   if (cmd == DLG_KEY)
     /*Выход из диалогового окна формирования отчета*/
     if (KEY == KEY_ESC)
       return exit(1);//CM_CANCEL;
     /*Выбор данных из списка*/
     elif ( KEY == KEY_F3)
        /*Выбор подразделения банка из списка подразделений */
        if (FldName(dlg,id) == "Account")
           if (Listaccount (account,1,-1,dlg.rec.account))
              if (strlen(dlg.rec.oper)>0)
              if (CheckAccountRestriction(6, 1, fiid(dlg.rec.account), dlg.rec.account, 0, ACS_OnlyCheck , CNTX_None, dlg.rec.oper  ))
              dlg.rec.account = account.account;
              dlg.rec.clientid = code(account.client);
              dlg.rec.clientname = getclientname(account.client);
              message(" ~F3~ Выбор счета "+const_mess);
              UpdateFields(dlg);
              else
              dlg.rec.account = "";
              dlg.rec.clientid = "";
              dlg.rec.clientname = "";
              message(" ~F3~ Выбор счета "+const_mess);
              UpdateFields(dlg);
              end;
              else
              dlg.rec.account = account.account;
              dlg.rec.clientid = code(account.client);
              dlg.rec.clientname = getclientname(account.client);
              message(" ~F3~ Выбор счета "+const_mess);
              UpdateFields(dlg);
              end;
           end;
          end;
        if (FldName(dlg,id) == "Oper")
           if (Listoper (oper))
              dlg.rec.oper = oper.oper;
              dlg.rec.opername = oper.name;
              message(" ~F3~ Выбор операциониста "+const_mess);
              UpdateFields(dlg);
          end;
        end;
        
     elif (KEY == KEY_SPACE)
          /*Сброс установок в поле офис банка*/
          if (FldName(dlg,id) == "Oper") 
            dlg.rec.oper="";
            dlg.rec.opername = "";
            UpdateFields(dlg);
          end;
          if (FldName(dlg,id) == "Account")
             dlg.rec.account = "";
             dlg.rec.clientid="";
             dlg.rec.clientname="";
            UpdateFields(dlg);
          end;
     elif (( KEY == KEY_F2 )  or ( KEY == KEY_ENTER ))         //Проверки при вводе
        op  = dlg.rec.oper;
        acc = dlg.rec.account;
        balacc=dlg.rec.balacc;
           Return CM_SAVE;
      else
           Return CM_IGNORE;
     end;
   end;
        
END;

