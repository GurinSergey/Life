private macro RezC(ground)
 if (substr(ground,1,3)=="{VO")
     i=3;
    while (i<8)
      i=i+1;
        if ((substr(ground,i,1)=="1") or (substr(ground,i,1)=="2") or (substr(ground,i,1)=="3") 
           or (substr(ground,i,1)=="4") or (substr(ground,i,1)=="5") or (substr(ground,i,1)=="6")
