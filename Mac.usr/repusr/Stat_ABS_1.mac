      elif (rsd.value(0) == "oper")
         oper = rsd.value(1);
      elif (rsd.value(0) == "clall")
         clientall = rsd.value(1);
      elif (rsd.value(0) == "acall")
         accall = rsd.value(1);
      elif (rsd.value(0) == "pall")
         paymentall = rsd.value(1);
      end; 
  end;

 arh = arh+arhs;

end;

