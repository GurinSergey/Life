/*Счет из основания*/
private macro accfromground(ground)
var pos, acc;
ground = strlwr(ground);
  if (index(ground,"40817")>0)
    pos = index(ground,"40817");
    ground = substr(ground,pos);
     if (index (ground," ")!=0)
       pos = index (ground," ");
       acc = substr(ground,pos);
     else
       acc=ground;
     end;
     if ((strlen(acc)<10) or (strlen(acc)>35))
        return "Счет определить не удалось";
     else
        return acc;
     end;
  elif (index(ground,"423")>0)
    pos = index(ground,"423");
    ground = substr(ground,pos);
      if (index (ground," ")!=0)
        pos = index (ground," ");
        acc = substr(ground,pos);
      else
        acc=ground;
      end;
      if ((acc<18) or (acc>25))
        return "Счет определить не удалось";
      else
        return acc;
      end;
   else 
    return "Счет определить не удалось";
   end;
end;

