              dprt_v = dep.code;
              dlg.rec.branchname = GetClientName(Dep.PartyID);
              message(" ~F3~ Список подразделений "+const_mess);
              UpdateFields(dlg);
              else
              msgbox("Отчет можно выпускать только для Филиала");
              dlg.rec.branchcode = GetClientNameID(Dep.parentcode);
              dprt_v = dep.parentcode;
              dlg.rec.branchname = GetClientName(dep.parentcode);
              message(" ~F3~ Список подразделений "+const_mess);
              UpdateFields(dlg);
              end;
           end;
        end;

        
     elif (KEY == KEY_SPACE)
