 MACRO GetCommandText(Acc, DataB, DataE, Div, CText, FeeType)   //+1
 
  var  contragentSelect, ACCFILTER = "", DEFFFILTER = "";
  
  if (Acc != "")
    ACCFILTER = "                            AND ( PAYM.T_RECEIVERACCOUNT IN ("+Acc+") " +
                "                                  OR EXISTS " +
                "                                       (SELECT   1 " +
                "                                          FROM   dpmaddpi_dbt " +
                "                                         WHERE   t_paymentid = PAYM.T_PAYMENTID " +
                "                                                 AND t_account IN ("+Acc+")) " +
