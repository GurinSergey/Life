                     "                            AND PAYM.T_FEETYPE = T.T_FEETYPE " +
                     "                            AND DEFF.T_STATUS >= 30 " +
                     "                            AND DEFF.T_SUM != 0 " + DEFFFILTER +
                     "                            AND PAYM.T_DEFCOMID = DEFF.T_ID " +
