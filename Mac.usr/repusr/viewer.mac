import RSD,rcw;

var Cmd, rs;
var col = TArray;

// Создаём клиентский статический курсор
cmd = RsdCommand (" SELECT object_name, " +
                  "        object_type, " +
                  "        TO_CHAR (created, 'dd.mm.yyyy hh24.mm.ss') AS created, " +
                  "        TO_CHAR (last_ddl_time, 'dd.mm.yyyy hh24.mm.ss') AS last_ddl_time, " +
                  "        status " +
                  " FROM   user_objects;");
rs = RSDRecordset(cmd , RSDVAL_CLIENT, RSDVAL_STATIC );

macro AddCol (ar,ind, fld, head, width, rdonly)
  ar.value (ind * 6)     = fld;
  ar.value (ind * 6 + 1) = head;
  ar.value (ind * 6 + 2) = width;
  ar.value (ind * 6 + 3 ) = 0;   // fldType
  ar.value (ind * 6 + 4 ) = -1;  // decPoint
  ar.value (ind * 6 + 5 ) = 0;   // reserv
end;

AddCol (col, 0, "OBJECT_NAME", "Имя объекта", 20, true);
AddCol (col, 1, "OBJECT_TYPE", "Тип объекта", 10, true);
AddCol (col, 2, "CREATED", "Дата создания", 20, true);
AddCol (col, 3, "LAST_DDL_TIME", "Время последнего изменения", 20, true);
AddCol (col, 4, "STATUS", "Статус объекта", 8, true);

RunScroll (rs, 5, col, null, null, "Список объектов БД", "Для выхода нажмите ESC");

