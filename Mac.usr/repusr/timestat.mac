   end;

end;


/* Сохранение времени окончания операции */

macro SaveEndTime (operation)
   var query, rs, oper;
   if (ValType(operation)!=V_UNDEF)
                oper = {oper};
      query = " DECLARE "
      + "\n" + "    tmp USR_TIMESTAT_TMP%ROWTYPE; "
      + "\n" + "BEGIN "
      + "\n" + "   SELECT * INTO tmp FROM USR_TIMESTAT_TMP where rownum = 1; "
      + "\n" + "   INSERT INTO USR_TIMESTAT_DBT (T_AUTOKEY, "
      + "\n" + "                                 T_OPERATIONID, "
      + "\n" + "                                 T_PARAM, "
      + "\n" + "                                 T_AMOUNT, "
      + "\n" + "                                 T_TIMEBEGIN, "
      + "\n" + "                                 T_TIMEEND, T_OPER) "
      + "\n" + "     VALUES   (NULL, "
      + "\n" + "               " + operation + ", "
      + "\n" + "               tmp.t_param, "
      + "\n" + "               tmp.t_amount, "
      + "\n" + "               tmp.t_timebegin, "
      + "\n" + "               systimestamp,"  
      + "\n" + "               " + oper + "); "
      + "\n" + "END;";
      rs = rsdcommand(query);
      if(rs)
         rs.execute;
         return true;
      else 
         return false;
      end;
   else
                return false;           
   end; 
   
end;

