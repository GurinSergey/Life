macro KSaveAmount (amount,id)
   var query, rs;

   if ((ValType(amount)!=V_UNDEF)and(ValType(id)!=V_UNDEF))
     query = "update USR_TIMESTAT_DBT set t_amount = " + amount + " where t_autokey=" + id;
