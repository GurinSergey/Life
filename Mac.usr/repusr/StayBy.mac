import RSD;
var {curdate};
debugbreak;
//private macro Claim_info(claim, account)
private macro Claim_info(account)

var claim_fo = "";

var c = rsdcommand("SELECT t_dockind, DECODE (case,   "+
" 'ББ_15_16_70_400_430_440', 'ББ   (15-мультики, 16, 27 -платежки ББ, 70-мемеорики, 400,430,440 -кассовые ББ, 286 - банковские ордера)',   "+
" 'РКО_230_231_233'        , 'РКО  (230, 231, 233 - Заявления на открытие/закрытие счетов)',   "+
" 'РКО_201_202_410_420'        , 'РКО  (201, 202 - РДД, 410,420 - Кассовые РКО-шные документы)',   "+
" 'РКО_51'                 , 'РКО  (51 - периодическая комиссия)',   "+
" 'ББ_59'                  , 'ББ   (59 - требования на оплату периодических комиссий)',   "+
" 'АРМП_320_322'        , 'АРМП (Ответные платежки)',   "+
" 'ПРОЧЕЕ'                 , 'Остальные экземпляры операций'   "+
" ) Dockind  from (   "+
" SELECT  pm.t_dockind,    "+
"     case    "+
"        when pm.t_dockind in (15, 16, 70, 400, 430, 440, 27, 286) then 'ББ_15_16_70_400_430_440'   "+
"        when pm.t_dockind in (230, 231, 233)             then 'РКО_230_231_233'   "+
"        when pm.t_dockind in (201, 202, 410, 420)             then 'РКО_201_202_410_420'   "+
"        when pm.t_dockind in (51)                        then 'РКО_51'   "+
"        when pm.t_dockind in (59)                        then 'ББ_59'   "+
"        when pm.t_dockind in (320, 322, 27)              then 'АРМП_320_322_27'   "+
"        else 'Остальное'    "+
"     end case   "+
"  FROM dacclaim_dbt cl, dacclmdoc_dbt doc, dpmpaym_dbt pm "+
" WHERE cl.t_initiator = 5 "+
"   AND cl.t_claimkind = 3 "+
"   AND cl.t_claimid = doc.t_claimid "+
"   AND cl.t_account = ? "+
"   AND pm.t_paymentid = doc.t_documentid "+
"   AND pm.t_dockind = doc.t_dockind) ");
//c.addparam("claim", RSDBP_IN, claim);
c.addparam("account", RSDBP_IN, account);
c.execute;
var cm = rsdcommand("Select count(1) as cnt "+
"  FROM dacclaim_dbt cl, dacclmdoc_dbt doc, dpmpaym_dbt pm "+
" WHERE cl.t_initiator = 5 "+
"   AND cl.t_claimkind = 3 "+
"   AND cl.t_claimid = doc.t_claimid "+
"   AND cl.t_account = ? "+
"   AND pm.t_paymentid = doc.t_documentid "+
"   AND pm.t_dockind = doc.t_dockind ");
//c.addparam("claim", RSDBP_IN, claim);
cm.addparam("account", RSDBP_IN, account);
cm.execute;
var rs1 = rsdrecordset(cm);

var rs = rsdrecordset (c);

if ((rs1.movenext()) and (rs1.value(0)>1))
claim_fo = " Количество документов: "+int(rs1.value(0));
else
if (rs.movenext())
claim_fo = " Документ "+rs.value(0)+": "+rs.value(1);
end;
end;

/* EVG 29/1/2014 Переход на 2031.
c = rsdcommand("SELECT (  rsb_account.resta (acc.t_account, '"+{curdate}+"', 1, acc.t_r0) "+*/
c = rsdcommand("SELECT (  RSB_ACCOUNT.RestAc( acc.t_account, acc.t_code_currency, '"+{curdate}+"', acc.t_chapter, 0 ) "+
"        - (SELECT NVL (SUM (acclaimstate.t_currentamount), 0) AS sm "+
"             FROM dacclaim_dbt claim, dacclaimstate_dbt acclaimstate "+
"            WHERE claim.t_chapter = 1 "+
"              AND claim.t_account = acc.t_account "+
//" AND cl.t_initiator = 5 "+
//"   AND cl.t_claimkind = 3 "+
"              AND claim.t_claimid = acclaimstate.t_claimid "+
" AND (claim.t_finishdate > to_date ('"+{curdate}+"','DD-MM-YYYY') "+
" or claim.t_finishdate = to_date ('01.01.0001','DD-MM-YYYY')) "+
" and acclaimstate.t_state in (1,2)) "+
"       ) AS sumr "+
"  FROM daccount_dbt acc "+
" WHERE acc.t_account = ? ");
c.addparam("acc", RSDBP_IN, account);
c.execute();
rs = rsdrecordset (c);

if (rs.movenext())
claim_fo = "Свободный остаток: "+money(rs.value(0))+";"+claim_fo;
end;

return claim_fo;
end;

