 /*Обработчик диалоговой панели ввода исходных данных для печати*/
MACRO Event (dlg, cmd, id, key) 

   var const_mess = "~F2~ Продолжить ~SPACE~ По всем офисам ~ESC~ Выход ";
   var const_mess2 = "~F2~ Продолжить ~SPACE~ ~ESC~ Выход ";

   /*Первоначальная инициализация полей*/
   if(cmd == DLG_INIT)
      dprt_v = 0;
      dlg.rec.dprt_code  ="";
      dlg.rec.dprt_name = officename;
      datesplit({curdate},null,mon,year);
      if (mon==1)
         mon=13; year=year-1;
      end;
      dlg.rec.Datebegin1 = date(1,mon-1,year);
      if (mon==13)
         mon=1; year=year+1;
      end;
      dlg.rec.DateEnd1 = date(1,mon,year)-1;
      dlg.rec.Datebegin2 = date(1,mon,year);
      dlg.rec.DateEnd2 = {curDate};
      UpdateFields(dlg); 
   end;
   /*Установка подсказок в строке состояния*/
   if (cmd==DLG_SETFOCUS)
      if (FldName(dlg,id)=="dprt_code") 
         message(" ~F3~ Список подразделений "+const_mess);
      elif (FldName(dlg,id)=="DateBegin1")
         message(" ~F3~ Выбор даты из календаря "+const_mess2);
      elif (FldName(dlg,id)=="DateEnd1")
         message(" ~F3~ Выбор даты из календаря "+const_mess2);
      elif (FldName(dlg,id)=="DateBegin2")
         message(" ~F3~ Выбор даты из календаря "+const_mess2);
      elif (FldName(dlg,id)=="DateEnd2")
         message(" ~F3~ Выбор даты из календаря "+const_mess2);
      end;
   end;
   if (cmd == DLG_REMFOCUS)
     /*Проверка корректности дат отчета*/
      if (FldName(dlg,id) == "DateBegin1")
         if ( dlg.rec.DateBegin1 > {curdate} )
            MsgBox("Дата начала периода не может быть больше даты текущего операционного дня");
            return CM_CANCEL;
         elif ( dlg.rec.DateBegin1 > dlg.rec.DateEnd1 )
            MsgBox("Дата начала периода не может быть больше даты окончания периода");
            return CM_CANCEL;
         end;
      end;
      if (FldName(dlg,id) == "DateEnd1")
         if ( dlg.rec.DateEnd1 > {curdate} )
            MsgBox("Дата не может быть больше даты текущего операционного дня");
            return CM_CANCEL;
         elif ( dlg.rec.DateBegin1 > dlg.rec.DateEnd1 )
            MsgBox("Дата окончания периода не может быть меньше даты начала периода");
            return CM_CANCEL;
         end;
       end;
      if(FldName(dlg,id) == "DateBegin2")
         if ( dlg.rec.DateBegin2 > {curdate} )
            MsgBox("Дата начала периода не может быть больше даты текущего операционного дня");
            return CM_CANCEL;
         elif ( dlg.rec.DateBegin2 > dlg.rec.DateEnd2 )
            MsgBox("Дата начала периода не может быть больше даты окончания периода");
            return CM_CANCEL;
         end;
      end;
      if (FldName(dlg,id) == "DateEnd2")
