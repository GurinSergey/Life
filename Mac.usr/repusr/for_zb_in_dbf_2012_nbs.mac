end;

macro copyToMe(src, dst, ktoeto)
//		getstring(tempFileNameBezPuti);
		private var m_path: string = "";
		m_path = "$" + dst;
		if (not CopyFile(src, m_path, TRUE))
			println ("не могу скопировать файл с сервера приложений на терминал.\n исходный файл: "+src+" \nфайл назначения: " + m_path);
			return false;
		else 
//			getstring(m_path);
			if (not removeFile(src))
				msgbox("Не смог удалить файл "+src+" с сервера приложений. Ну да и бог с ним.");
			end;
		end;

		if (not(GetFileInfo("$"+dst,@dd,@tt,@ii,@ss))); //ss- то что надо. полный путь абсолютный локальный
			msgbox("не смог найти на локальном диске файл "+dst+"          \n останавливаюсь");
			exit(0);
		else
			println ("                  ФАЙЛ ВЫГРУЗКИ ("+ ktoeto+") СКОПИРОВАН В "+ss +", \n                  размер "+string(ii:a) + " байт. Файл может быть ограничен 2 Гб");
		end;

end;

macro getSID()
var sql;
    sql = RSDRecordset("Select RSBSessionData.cnum from dual");
    if (sql.movenext)
       return  sql.value(0, null, V_INTEGER);
    end;
       return 0;
end; 

macro getSP()
  var rset = trsbdataset("select v.terminal from v$session v where  v.sid ="+getsid);
  if( rset and rset.moveNext() )
    return rset.value(0);
  end;
    return 0;  
end;



macro day_prov()
    var i:integer = -1;
    message (" формируется журнал проводок 1"); begaction(2000,"формируется DATASET ДЛЯ ПРОВОДОК ",false);
    var ds = trsbdataset(day_sql);
    endaction();
	prov_wrk = prov_wrk + dop_name + prov_wrk_ext;
	podgotovka(prov_tpl, prov_wrk);

	initprogress(-1,string("запись сформированных ранее значений в файл "+prov_wrk),string("данные записываются в файл "+prov_wrk));
	while  (ds and ds.movenext())
		f2.date = ds.date;
		f2.deb = ds.deb;
		f2.kre = ds.kre;
		f2.sum = ds.sum;
		f2.sender = ds.sender;
		f2.receiver = ds.receiver;
		f2.txt = ds.txt;
		f2.sum_deb = ds.sum_deb;
		f2.sum_cre = ds.sum_cre;
		if (not (insert(f2)))
			println("не смог выгрузить запись "+string(i+1)+"в файл \ndata=:"+string(ds.date)+"\ddeb="+ds.deb+"\nkre"+ds.kre+"\nsum="+ds.sum+"\nsender="+ds.sender+"\nreceiver="+ds.receiver+"\ntxt"+ds.txt +
			"\nsum_deb="+ds.sum_deb+"\msum_cre="+ds.sum_cre+"\n         возможно файл просто занят. ");
			exit(0);
		end;
		i = i + 1;
		useprogress(i);
	end;
	remprogress();

	close(f2);
	s3 = string(prov_wrk_name+dop_name+prov_wrk_ext); //имя без пути
	if (copy_need) 
		copytome(prov_wrk, s3,"ПРОВОДКИ_1");
	else
		GetFileInfo(s3, @dd, @tt, @ii, @ss);                   
		println("      ФАЙЛ ПРОВОДКИ_1 СФОРМИРОВАН НА СЕРВЕРЕ ПРИЛОЖЕНИЙ " + GETSP +" ТЕКУЩАЯ ДИРЕКТОРИЯ  "+getcurdir()+" фАЙЛ  "+ss);
	end;
end;



