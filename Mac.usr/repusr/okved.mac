end;


 /*Обработчик диалоговой панели ввода исходных данных для печати*/
MACRO Event (dlg, cmd, id, key) 

   var const_mess = " ~F3~ Выбор значения из списка ~F2~ Продолжить ~ESC~ Выход ",
   SQLQuery, SQLQuery1, rsrec, cmd1;

   /*Первоначальная инициализация полей*/
   if(cmd == DLG_INIT)
      dlg.rec.branch = "Все подразделения";
      dlg.rec.name = "";
      branchcode = 0;
      dlg.rec.okved = "";
      UpdateFields(dlg); 
   end;
   
   /*Установка подсказок в строке состояния*/
   if (cmd==DLG_SETFOCUS)
       message(const_mess);
   end;
   
   if (cmd == DLG_REMFOCUS)
     /*Проверка корректности дат отчета*/
      UpdateFields(dlg); 
   end;

   if (cmd == DLG_KEY)
     /*Выход из диалогового окна формирования отчета*/
     if (KEY == KEY_ESC)
       return exit(1);//CM_CANCEL;
     /*Выбор данных из списка*/
     elif ( KEY == KEY_F3)
        if (FldName(dlg,id) == "Name")
           if (ListDepartment (Department))
              branchcode = department.code; 
              dlg.rec.branch = GetClientName(Department.PartyID);
              dlg.rec.name = Department.name;
              message(" ~F3~ Список подразделений "+const_mess);
              UpdateFields(dlg);
            end
		  elif (FldName(dlg,id) == "okved")
				SQLQuery1 = " select objattr.t_numinlist as num, OBJATTR.T_FULLNAME as name, objattr.t_attrid from dobjattr_dbt objattr " + 
                       	" where OBJATTR.T_OBJECTTYPE = 3 " +
                       	" and OBJATTR.T_GROUPID = 17 " +
                       	" order by objattr.t_numinlist;";
            cmd1 = RSDCommand(SQLQuery1);
            rsrec = RSDRecordset( cmd1, RSDVAL_CLIENT, RSDVAL_STATIC );
            if (RunScroll(rsrec, 0, 0, "Опера", @EvProc, "Список кодов ОКВЭД", "~Enter~ выбор кода ~Esc~ выход", true))
            		if (dlg.rec.okved == "")
	                  dlg.rec.okved = rsrec.value (0);
	                  okvedid = rsrec.value (2);
	               else
	               	dlg.rec.okved = dlg.rec.okved + ", " + rsrec.value (0);
	               	okvedid = okvedid + ", " + rsrec.value (2);
            		end;
                  UpdateFields(dlg);
            end;
        end;
     elif (( KEY == KEY_F2 ) or (KEY == KEY_ENTER))         //Проверки при вводе
         if ( dlg.rec.branch == "" )
                branchcode = 0;
         end;
         if ( dlg.rec.okved == "" )
                MsgBox("Заполните поле Код ОКВЭД");
                return CM_IGNORE;
         end;
         Return CM_SAVE;
     end;
      else
           Return CM_IGNORE;
   end;
        
END;

