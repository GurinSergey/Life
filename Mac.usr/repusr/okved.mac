   + "\n" + "where " + branch_sql + " cod.t_codekind=1 and cod.t_objecttype=3 and cod.t_objectid=account.t_client and cod.t_state=0 and "//11.07.2012 vihrov C-12122 смена диапазонов кодов
   + "\n" + "OBJATCOR.T_ATTRID in (" +  okvedid + ")"
   + "\n" + "and OBJATCOR.T_OBJECTTYPE = 3"
   + "\n" + "and OBJATCOR.T_GROUPID = 17"
