macro beginTime ()
   var param = "";
   var period, month;
   debugbreak;
   period = ДатаОтчета - ПредДатаОтчета;
   month = substr(string(ДатаОтчета), 4, 2);
   if (((period == 30) and ((month=="01") or (month=="03") or (month=="05") or (month=="07") or (month=="08") or (month=="10") or (month=="12"))) 
   	or ((period == 29) and ((month=="04") or (month=="06") or (month=="09") or (month=="11"))) 
	   or (((period == 27) or (period == 28)) and (month == "02")))
   	param = "month";
   elif (period == 6)
   	param = "week";
   elif (period == 0)
   	param = "day";
   else
   	param = period;		 
   end;
   SaveBeginTime(param);
   exit(1);
end;

