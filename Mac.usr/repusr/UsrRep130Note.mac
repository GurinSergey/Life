     macro getKindSource( val, x, y)        
        array SourceKind ;
        var fx, fy;        
        getPosition( fx, fy );

        SourceKind(asize(SourceKind)) = "Все";        
        SourceKind(asize(SourceKind)) = "Субъект";        
        SourceKind(asize(SourceKind)) = "б/о";
        SourceKind(asize(SourceKind)) = "Комиссия";
        SourceKind(asize(SourceKind)) = "Счет";

        var m = menu( SourceKind, null, null, x + fx, y + fy);

        if( m >= 0 ) return SourceKind( m );
        else         return val;
        end;

    end;



    macro ViewReportBO()           
       var table = CTableReport();
           table.addColumn ("№пп"                       ,  4 , AL_RIGHT);
