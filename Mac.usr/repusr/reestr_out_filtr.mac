macro bank_name()  // получить название банка
   private var ds;
   private var s_bank_name:string="default bank";
   ds=trsbdataset("select t_name from dparty_dbt where t_partyid='"+{OurBank}+"'");
   if (ds.movenext) s_bank_name=ds.value("t_name");
   else msgbox(" чото не могу выбрать название для банка. останавливаюсь "); exit(7);
   end;
   return s_bank_name;
end;

macro _FNameValReestr_(id_value)  //получить полный путь для переменной реестра
  private var sql = execSqlSelect("select RSB_Common.RSI_GetRegKeyPath(:id) val from dual", makeArray (SQLParam ("groupid", id_value)));
  if (sql and sql.movenext())
    return(sql.value("val"));
  else
    return("");
  end;
end;

macro day_ktoeto(s1) // вывести текст в зависимости от типа настройки: пользовательская, узловая или по умолчанию
	if (s1=="user") kolwo_user=kolwo_user+1;return "пользователь";
	elif (s1=="uzel") kolwo_uzel=kolwo_uzel+1;return "узел";
	elif (s1=="umol4") kolwo_umol4=kolwo_umol4+1;return "значение по умолчанию";
	else return ("Неизвестный тип настройки. Обратитесь к саппорту"); 
	end;
end;

macro day_globalnost(s2) // признак глобальности
	if (s2=="X")  kolwo_glob=kolwo_glob+1; return "глобальная";
	end;
end;

