      "   AND AC.T_USERTYPEACCOUNT NOT LIKE 'Т%')     "+
      "   and AC.T_OPEN_CLOSE!='З'          ";    //ПРББ 11 символ 9
       
     message("ЖДИТЕ. ПОСТРОЕНИЕ ОТЧЕТА МОЖЕТ ЗАНЯТЬ НЕКОТОРОЕ ВРЕМЯ");
    
     dat = TRsbDataSet(query);
