var sql=""+
"	/* Formatted on 21.01.2011 13:43:54 (QP5 v5.115.810.9015) disa */	"+
"	  SELECT   c4_706, type706, rest706, fin706.t_ccy vval706, nazvanie706, c4_707, type707, rest707, fin707.t_ccy vval707, nazvanie707, for_sort,	"+
