"	    FROM   (SELECT   c4_706,	"+
"	                     t706.type706,	"+
"	                     CASE WHEN NOT (c4_706 IS NULL) THEN rsb_account.resta (c4_706, TO_DATE ('31.12."+god+"', 'dd.mm.rrrr'), 1, NULL) END	"+
"	                        AS rest706,	"+
"	                     t706.t_code_currency val706,	"+
"	                     t706.nazvanie706,	"+
"	                     c4_707,	"+
"	                     t707.type707,	"+
