"                   ), "+
"                   'HH24:MI:SS' "+
"                  )");
   cmdT.addparam("Id",RSDBP_IN, ID);
   cmdT.addparam("date",RSDBP_IN, daterep);
//   cmdT.addparam("date",RSDBP_IN, date1);
   rsdT = rsdrecordset(cmdT);
   if (rsdT.movenext())
      return 1;
   end;
    return 0;
end;


