     CodDp = 0;
  end;

  sql = " SELECT   pt.t_name " +
        "   FROM   dparty_dbt pt " +
        "  WHERE   t_partyid = (SELECT   dp.t_partyid " +
        "                         FROM   ddp_dep_dbt dp " + 
