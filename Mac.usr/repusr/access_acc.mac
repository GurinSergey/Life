// макрос для установки значения  настройки
// BANK_INI\ОБЩИЕ ПАРАМЕТРЫ\ДОСТУП\СЧЕТА ПОКРЫТИЯ
// для всех пользователей, имеющих определенный АРМ

Import BankInter, RSD;
var nom_arm;
var query;
var sql;
var metka = false;
  
  if (getstringR (nom_arm, "Укажите номер АРМ", 5))
      query = " SELECT   t_user        " +
              " FROM dperson_lnk_dbt   " +
              " WHERE t_role = " +  nom_arm ;
      sql = rsdrecordset(query);
      gettrue (metka, "Установить доступ к счетам покрытия (Yes/No)?");
      while (sql.moveNext)   
          SetRegistryValue ("BANK_INI\\ОБЩИЕ ПАРАМЕТРЫ\\ДОСТУП\\СЧЕТА ПОКРЫТИЯ", metka, sql.value("t_user"));
      end;
  end;

end;




