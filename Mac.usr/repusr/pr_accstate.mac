 /*Обработчик диалоговой панели ввода исходных данных для печати*/
private MACRO Event (dlg, cmd, id, key) 
   var s;
   var const_mess = "~F9~ Сохранить ~ESC~ Выход Space Переключить";

   /*Первоначальная инициализация полей*/
   if(cmd == DLG_INIT)
      s=trsbdataset(string("select * from daccstate_dbt where t_number=",number));
      if (s.movenext())
        dlg.rec.date  = s.date;
        dlg.rec.activ =s.activ;
        dlg.rec.info =s.info;
      else
        dlg.rec.date  = {curdate};
        dlg.rec.activ ="X";
        dlg.rec.info ="";
      end;
      UpdateFields(dlg); 
   end;
   setfocus(dlg,1);
   
   if (cmd == DLG_KEY)
     /*Выход из диалогового окна формирования отчета*/
     if (KEY == KEY_ESC)
       return CM_Cancel;//CM_CANCEL;
     /*Выбор данных из списка*/
     elif (KEY == KEY_SPACE)
          /*Сброс установок в поле офис банка*/
           if (FldName(dlg,id) == "Activ") 
            if (dlg.rec.activ=="")
            dlg.rec.activ="X";
            UpdateFields(dlg);
            else
            dlg.rec.activ="";
            UpdateFields(dlg);
            end;
          end;

     elif ( KEY == KEY_F9 ) 
       debugbreak;
       if (number)
        s =  string("update daccstate_dbt set t_date='",{curdate},"', t_activ='",dlg.rec.activ,"', t_oper=",{oper},", t_info='",dlg.rec.info,"' where t_number=",number);
        cmd = RSDCommand( s );
        cmd.Execute();
       else 
        s=trsbdataset("select count(*) as cnt from daccstate_dbt");
        if (s.movenext())
          number=s.cnt+1;
        end;
        s = string("insert into daccstate_dbt values (",number,",",{oper},",'",{curdate},"','",dlg.rec.info,"','",dlg.rec.activ,"')");
        SQL_Execute(s,"Присвоение значений", false);
       end;
        Return CM_SAVE;
     else
        return cm_ignore;
     end;
   end;
        
END;


