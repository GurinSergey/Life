MACRO GetChapt(acc)
  var balacc, chapter;

  if(strbrk(acc, "ОВП") > 0)
     return 1;
  else
     balacc = int(SUBSTR (acc, 1, 5));
  end;

  IF ((balacc >= 98000) AND (balacc <= 98090))
      chapter = 5;
  ELIF ((balacc >= 93001) AND (balacc <= 97001))
      chapter = 4;
  ELIF (   ((balacc >= 90601) AND (balacc <= 91904))
        OR (balacc == 99999) OR (balacc == 99998))
      chapter = 3;
  ELIF ((balacc >= 80101) AND (balacc <= 85501))
      chapter = 2;
  ELSE
     chapter = 1;
  END;

 return chapter;
END;

MACRO GetPartyByAccount(acc)
  var rs, str;
  str = "SELECT t_client " +
        "  FROM daccount_dbt " +
        " WHERE t_account = '"+acc+"' " + 
        " and t_chapter = "+ getchapt(acc);

  rs = trsbdataset(str);
  if(rs and rs.movenext)
     return rs.client;
  else
     return -1;
  end;
END;


