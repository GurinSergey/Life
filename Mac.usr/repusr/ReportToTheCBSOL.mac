/*Метод форматирования даты*/
Macro GetFormatDate
    var thisDate = Trim(String(Date())), i = 0, thisValue, newValue = "";
    while (i <= StrLen(thisDate))
        thisValue = SubStr(thisDate, i, 1);
        if (thisValue == ".") 
            newValue = newValue + "_";
        else                  
            newValue = newValue + thisValue 
        end;
        i = i + 1;
    end;
    return newValue;
End;

