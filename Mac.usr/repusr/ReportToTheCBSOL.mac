/*Обработка формы*/
Class (TRecHandler) STParm(LbrName)    
  InitTRecHandler ("stat_acc", (LbrName), true); 

  Macro CreateReport (name_report, date1, date2) 
    f_rep_changeCB = "..\\txtfile\\" + rec.FileName + ".txt";
    f_rep_change = f_rep_changeCB;
    var time_st = time();

    var rep = Reports(date1, date2);     
    debugbreak;
    if   ((name_report == "ЖУРНАЛ ОТКРЫТЫХ И ЗАКРЫТЫХ СЧЕТОВ"))
      rep.SQLAccounts();
      rep.ExecSql();
      rep.WriteAccounts();  
    elif ((name_report == "ПРОВОДКИ_1")) 
      rep.SQLAcctrnOne();
      rep.ExecSql();
      rep.WriteAcctrnOne();      
    elif ((name_report == "ПРОВОДКИ_2")) 
      rep.SQLAcctrnTwo();
      rep.ExecSql();
      rep.WriteAcctrnTwo();  
    elif ((name_report == "ОСТАТКИ")) 
      rep.WriteRestDate();  
    end;
    MsgBox("Обработано записей: " + rep.ctn + "| Время обработки: " + String(time() - time_st));

    SetOutput (null, false);  
    if ((ExistFile(f_rep_change, 0)) and (open(f_rep_out, f_rep_change)))
      viewFile(f_rep_change);
      close(f_rep_out);
    end;            
 
  OnError(r)
    msgbox(r.Message + ", " + r.Err);
  End;

  Macro Handler (dlg, cmd, id, key) 
    if (cmd == DLG_KEY)	
      if (KEY == KEY_F2)

        if (date(dlg.rec.EndDate) < date(dlg.rec.BeginDate)) 
          MsgBox("Дата начала периода не может быть больше даты его окончания! | Необходимо изменить настройки!");
        else 
          CreateReport(dlg.rec.ReportFormat, dlg.rec.BeginDate, dlg.rec.EndDate);
        end;

      elif (KEY == KEY_F3)      
 
        if (id == FldIndex("ReportFormat"))
          dlg.("ReportFormat") = rep(Menu(rep, "Формат", "Формат"));                      
        end;                                                                                                                  	
      end;
    end;
  End;         

  Macro Run 
    return RunDialog (this, R2M (this, "Handler"));  
  End;
End;

