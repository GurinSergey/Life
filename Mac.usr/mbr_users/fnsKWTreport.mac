class KWTMessage(_fileName,_dateCheck, _FileDate, _codeCheck:TArray,_textCheck:TArray)
  var m_fileName  = _fileName ;
  var m_dateCheck = _dateCheck;
  var m_FileDate   = _FileDate;
  var m_codeCheck:TArray = _codeCheck;
  var m_textCheck:TArray = _textCheck;
    
  macro getCode(n)
    return m_codeCheck(n);
  end;

  macro getText(n)
    return m_textCheck(n);
  end; 
   
end;

private macro normalizePath(path)
  if (SubStr(path, StrLen(path), 1)!="\\")
    path = path + "\\";
  end;
  return path;
end;

private macro readNotice(_filename):KWTMessage
  file f_pointer () txt;var ДатаПров,FileDate;
  var НаимФайла;
  var КодПров   :TArray = TArray(),
      ТекстПров :TArray = TArray(),
      Конец:bool;
  
  open(f_pointer,PATH_KWT +_filename); 
  next(f_pointer);
  НаимФайла = trim(substr(f_pointer.str,1,index(f_pointer.str,"###")-1));
  Конец = false;
  while ((next (f_pointer)) and (not Конец))
        if (f_pointer.str != "@@@")
          if (index(f_pointer.str,"@@@") == 0)
             КодПров(КодПров.size()) = trim(substr(f_pointer.str,1,2));
             ТекстПров(ТекстПров.size()) = trim(substr(f_pointer.str,4,strlen(f_pointer.str)));
          else
             КодПров(КодПров.size()) = trim(substr(f_pointer.str,1,2));
             if(Substr(f_pointer.str, strlen(f_pointer.str)-3, strlen(f_pointer.str)) == "@@@") //I-00254295 18.09.2012 Chesnokov D.S.
               ТекстПров(ТекстПров.size()) = trim(substr(f_pointer.str,4,strlen(f_pointer.str) - 6));
             else
               ТекстПров(ТекстПров.size()) = trim(substr(f_pointer.str,4,strlen(f_pointer.str)));
             end;
             next (f_pointer);
             break;
          end;
        else
          Конец = true;
        end;
  end;
  if (f_pointer.str == "@@@")
      next(f_pointer);
  end;
  ДатаПров = trim(substr(f_pointer.str,1,index(f_pointer.str,"@@@")-1));
  getFileInfo(PATH_KWT +_filename, FileDate); 
  return KWTMessage(НаимФайла, ДатаПров, FileDate, КодПров,ТекстПров);
end;

