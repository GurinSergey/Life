    macro importEDAsk ()
        var dir, i; 
        
        var sql = "delete USR_ASK_CONTAINER_TMP";
        execSQL (sql);
        
        if (not _flag)
            //debugbreak;                                                 
            dir = TDirList (string (params.path_ask_ed244_in, params.ask_ed244_mask), "f");
            dir.sort (0);
        
            // читаем файлы и заполняем временную таблицу (USR_ASK_CONTAINER_TMP)
            for (i, 0, dir.count - 1)
                readEDFile (dir.name (i));
            end;
        else
            readEDFile (_fileName);
        end;
    end;

    macro ViewReport ()
        file fp () txt;
        if (open (fp, this.reportName)) viewFile (fp); else MsgBox ("Не удалось открыть файл протокола"); end;
    end;

    macro FileMove ()
        var i = 0;
        var fullPath = "", fullPathOldMes = "";
        while (i < ask_array.size())
            fullPath       = string (params.path_ask_ed244_in , trim(ask_array(i).m_FName));
            fullPathOldMes = string (params.path_ask_ed244_old, trim(ask_array(i).m_FName));
            if (ask_array(i).m_Flag == "X")
                moveFile   (fullPath, fullPathOldMes);
            end;
            i = i + 1;
        end;
    end;



    macro init(trn, flag, check)
        //flag == True - обработка сообщения с МБР/Входящие/Сообщения/208-201
        if (flag != null) _flag = True; _fileName = string(trn,".xml");end;
        if (trn != null) _TRN = trn; end;
        if (check == null) check = False; end;

        //1. Установка выходных параметров
        params.readParams ();

        //2. Импорт отбивок
        this.importEDAsk ();

        //3. Печать отчета
        this.printImportRep ();

        //4. Квитуем ED244 
        this.MatchMessage (); 

        //5. Отражаем в usr_uf_container.xml_ask последнее ED208
        //this.update_xml_ask ();

        //6. Перемещение файлов
        if (not _flag)
            this.FileMove ();
        end;

        //7. Протокол
        if (not check)
            this.ViewReport ();
        end;

        if (flag)
            ask_array = TArray();
        end;

    onError (e)
        if (e.code == 47) // Error: Файл данных или таблица не открыты
            msgbox ("В директории загрузки |" + params.path_ask_ed244_in + "|отсутствуют файлы ED208 для импорта");
        end;
        exit (1);
    end;
end;

