import globals;

class FGBank ()
    macro is_PRBB () return ({MFO_BANK} == "044525986");  end;   // Пробизнесбанк
    macro is_VUZ  () return ({MFO_BANK} == "046577781");  end;   // ВУЗ
    macro is_NBS  () return ({MFO_BANK} == "042406718");  end;   // НБС
    macro is_GEB  () return ({MFO_BANK} == "042908701");  end;   // ГЭБ
    macro is_GO   () return ({MFO_BANK} == "044525732");  end;   // Гоу
    macro is_SLD  () return ({MFO_BANK} == "043601706");  end;   // Солидарность

    macro is_EXV_Saratov     () return ({MFO_BANK} == "046311808"); end;  // ЭВ-Саратов        
    macro is_EXV_Stavropol   () return ({MFO_BANK} == "040702756"); end;  // ЭВ-Ставрополь
    macro is_EXV_Volgograd   () return ({MFO_BANK} == "041806835"); end;  // ЭВ-Волгоград
    macro is_EXV_Voronezh    () return ({MFO_BANK} == "042007755"); end;  // ЭВ-Воронеж
    macro is_EXV_Ulyanovsk   () return ({MFO_BANK} == "047308902"); end;  // ЭВ-Ульяновск      

    macro is_EXV () 
        return ((is_EXV_Saratov) or (is_EXV_Stavropol) or (is_EXV_Volgograd) or (is_EXV_Voronezh) or (is_EXV_Ulyanovsk));  
    end;
end;

var _bank = FGBank ();
