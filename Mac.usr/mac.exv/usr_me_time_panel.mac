  AddCol (col, 3, "t_timeend", "Конец", 15, true);
  AddCol (col, 4, "t_is_holiday", "Выходной", 8, true);
  AddCol (col, 5, "t_action", "Документы", 8, true);
  AddCol (col, 6, "email", "Почта основная", 15, true);
  AddCol (col, 7, "T_IS_FINAL", "Финальный опрос", 8, true);
  AddCol (col, 8, "t_id", "Ид диапазона", 4,0, true,0);
  AddCol (col, 9, "T_FINAL_ID", "Ид связанного диапазона", 4,0, true,0);

  //Выбираем данные из таблицы
  CmdText = "SELECT DECODE (t.t_tb_include, 'X', '>=', '>') t_tb_include, t.t_timebegin, " +
            "       DECODE (t.t_te_include, 'X', '<=', '<') t_te_include, t.t_timeend, "+
            "       decode(t.t_action,'m_vnutren','Внутренние', "+ 
            "                         'm_vneshn',    'Внешние', "+ 
            "                         'm_all',    'Все', "+ 
            "                         'm_nothing','Ни чего', "+ 
            "                                     t.t_action) t_action,  " +
            "       t.t_is_holiday, t.t_id,email , email_a , email_b,T_IS_FINAL,T_FINAL_ID " +
            "  FROM usr_me_time_dbt t " +
            " ORDER BY t_is_holiday, TO_DATE (SUBSTR (t_timebegin, 1, INSTR (t_timebegin, '.') - 1),'hh24:mi:ss'),T_FINAL_ID " ;




  Command = RSDCommand(CmdText);
  Command.Execute();
  RecordSet = RSDRecordSet(Command, RSDVAL_CLIENT, RSDVAL_STATIC);


  //Запускаем скроллинг
  runScroll(RecordSet, 10, col, null, @EvProc, "Временные интервалы", "Enter - Редактировать,  F9 - Ввод,  ESC - Выход", false);


END;


