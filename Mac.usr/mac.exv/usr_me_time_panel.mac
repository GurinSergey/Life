//Является ли строка числом
macro Is_Digit( str )
  var isdigit, digit="1234567890";
  var i, n, cur_symb;

  isdigit = true;
  i = 1;
  n = strlen(str);
  while( (isdigit) and (i <= n) )
     cur_symb = SubStr(str, i, 1);
     if(index(digit,cur_symb) == 0)
       isdigit = false;
     end;
     i = i+1;
  end;
  return isdigit;
end;

//Проверка правильности заполнения поля
private macro check_time(tm)
  var hh,mm,ss,ms;
  var pos;

  if ((substr(tm,3,1)!= ":") or (substr(tm,6,1)!= ":") or (substr(tm,9,1)!= "."))
    msgbox("Не правильно задано время!|| Формат: ЧЧ:ММ:СС.МС");
    return false;
  end;

  hh = int(substr(tm,1,2));
  mm = int(substr(tm,4,2));
  ss = int(substr(tm,7,2));
  ms = int(substr(tm,10));

  if(not is_digit(substr(tm,1,2)))
    msgbox("В часах есть недопустимые символы!");
    return false;
  end;

  if((hh < 0) or (hh > 23))
    msgbox("Часы должны быть в диапазоне 0-23!");
    return false;
  end;

  if(not is_digit(substr(tm,4,2)))
    msgbox("В минутах есть недопустимые символы!");
    return false;
  end;

  if((mm < 0) or (mm > 59))
    msgbox("Минуты должны быть в диапазоне 0-59!");
    return false;
  end;

  if(not is_digit(substr(tm,7,2)))
    msgbox("В секундах есть недопустимые символы!");
    return false;
  end;

  if((ss < 0) or (ss > 59))
    msgbox("Секунды должны быть в диапазоне 0-59!");
    return false;
  end;

  if(not is_digit(substr(tm,10)))
    msgbox("В милисекундах есть недопустимые символы!");
    return false;
  end;

  if((ms < 0) or (ms > 99))
    msgbox("Милисекунды должны быть в диапазоне 0-99!");
    return false;
  end;


  return true;
End;

//Выбор типа документов
MACRO Get_mass_index(act, mas)

 var cnt, i;
 cnt = asize(mas);
 i=0;
 while (i<cnt)
    if(act == mas(i))
       return i;
    end;
    i = i+1;
 end;
 return -1;
end; 


//Обновление записи в таблице
  MACRO Update_usr_me_time(id, tb_include, timebegin, te_include, timeend, action, is_holiday,email,email_a,email_b,IS_FINAL,FINAL_ID)
     var rs, str;


     str = "UPDATE usr_me_time_dbt " +
           "   set t_timebegin = '"+timebegin+"' ," +
           "       t_timeend = '"+timeend+"' ," +
           "       t_action = '"+m_action(get_mass_index(action,name_action))+"' , " ;

    if(tb_include == ">=") 
     str = str + "       t_tb_include = 'X' ," ;
    else
     str = str + "       t_tb_include = chr(0) ," ;
    end;

    if(te_include == "<=") 
     str = str + "       t_te_include = 'X' ," ;
    else
     str = str + "       t_te_include = chr(0) ," ;
    end;

    if(is_holiday == "X") 
     str = str + "       t_is_holiday = '"+is_holiday+"' ," ;
    else
     str = str + "       t_is_holiday = chr(0) ," ;
    end;
    
    if (email == "") 
      str = str + "email   =  chr(0), " ;
    else 
      str = str + " email   =  '" +email +"', " ;
    end;
    if(email_a == "") 
     str = str +  " email_a =  chr(0), " ;
     else 
      str = str + " email_a = '" +email_a +"', " ;
    end;
    if(email_b == "") 
      str = str + "email_b = chr(0), " ;
    else 
      str = str + " email_b = '" +email_b +"' ," ;
    end;
    if(IS_FINAL == "") 
      str = str + "T_IS_FINAL =chr(0), T_FINAL_ID=null" ;
    else 
      str = str + "T_IS_FINAL= '" +IS_FINAL +"', " ;
      str =  str + "T_FINAL_ID= " +FINAL_ID +"" ;
    end;

    str = str + " WHERE t_id = "+ int(id);

     rs = rsdcommand(str);
     if(rs)
        rs.execute;
        return true;
     else 
        return false;
     end;
  END;


//Следующее значение идентификатора в таблице
  MACRO GetNextVal()
     var rs, str;
     str = "SELECT NVL (MAX (t_id), 0) id " +
           "  FROM usr_me_time_dbt " ;
     rs = trsbdataset(str);
     if (rs and rs.movenext)
        return int(rs.id+1);
     end;
     return 1;
  END;

//Вставка записи в таблицу
  MACRO insert_usr_me_time(tb_include, timebegin, te_include, timeend, action, is_holiday,email,email_a,email_b,IS_FINAL,FINAL_ID)
     var rs, str;
     str = "INSERT INTO usr_me_time_dbt " +
           "       (t_timebegin, t_timeend, t_action, t_tb_include, t_te_include, t_is_holiday,email,email_b,email_a,T_IS_FINAL,T_FINAL_ID, t_id) " +
           "VALUES ('"+timebegin+"', '"+timeend+"','"+m_action(get_mass_index(action,name_action))+"', " ;
    

    if(tb_include == ">=") 
     str = str + " 'X' ," ;
    else
     str = str + " chr(0) ," ;
    end;

    if(te_include == "<=") 
     str = str + " 'X' ," ;
    else
     str = str + " chr(0) ," ;
    end;

    if(is_holiday == "X") 
     str = str + " 'X', " ;
    else
     str = str + " chr(0), " ;
    end;
    
    if (email == "") 
      str = str + " chr(0), " ;
    else 
      str = str + "'" +email +"', " ;
    end;
    if(email_a == "") 
     str = str + " chr(0), " ;
     else 
      str = str + "'" +email_a +"', " ;
    end;
    if(email_b == "") 
      str = str + " chr(0), " ;
    else 
      str = str + "'" +email_b +"', " ;
    end;
     if(IS_FINAL == "") 
      str = str + " chr(0), " ;
    else 
      str = str + "'" +IS_FINAL +"', " ;
      str =  str + "'" +FINAL_ID +"', " ;
    end;

     str = str + GetNextVal()+" ) ";

     rs = rsdcommand(str);

     if(rs)
        rs.execute;
        return true;
     else 
        return false;
     end;            
  END;



//Удаление записи из таблицы
