 str =   "select T_ID ,T_TIMEBEGIN,"+
                " T_TB_INCLUDE,"+
                " T_TIMEEND,"+
                " T_TE_INCLUDE,"+
                "       decode(t_action,'m_vnutren','Внутренние', "+ 
