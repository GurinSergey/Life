macro DataTagTD(s)
 var p, _s;
  p= index(s, "<td");
  if( p )
    _s= SubStr(s, p+ 3);
    p = index(_s,">");
    if( p )
      s= SubStr(_s, p+ 1);
    end;
  end;
  p= index(s, "</td");
  if( p )
    s= SubStr(s, 1, p-1);
  end;
  return s;
end; 


