/*Перевод кодировки*/
macro UTFtoDOS(s)
 var ret= "", cf, i= 1, ln= StrLen(s);
 var dos= " Ё Й Ц У К Е Н Г Ш Щ З Х Ъ Ф Ы В А П Р О Л Д Ж Э Я Ч С М И Т Ь Б Ю ё й ц у к е н г ш щ з х ъ ф ы в а п р о л д ж э я ч с м и т ь б ю";
 var utf= "╨Б╨Щ╨ж╨г╨Ъ╨Х╨Э╨У╨и╨й╨Ч╨е╨к╨д╨л╨Т╨Р╨Я╨а╨Ю╨Ы╨Ф╨Ц╨н╨п╨з╨б╨Ь╨Ш╨в╨м╨С╨о╤С╨╣╤Ж╤Г╨║╨╡╨╜╨│╤И╤Й╨╖╤Е╤К╤Д╤Л╨▓╨░╨┐╤А╨╛╨╗╨┤╨╢╤Н╤П╤З╤Б╨╝╨╕╤В╤М╨▒╤О";
  while(i<=ln)
    if(SubStr(s,i,2)=="┬а")
      ret= ret+ " ";
      i= i+ 2;
    else
      cf= index(utf, SubStr(s,i,2));
      if(cf > 0)
        ret= ret+ SubStr(dos,cf+1,1);
        i= i+ 2;
      else
        ret= ret+ SubStr(s,i,1);
        i= i+ 1;
      end;
    end;
  end;
  ret= trim(ret);
  if(SubStr(ret,1,2)=="┬")
    ret= SubStr(ret,2);
  end;
  return ret;
end; // UTFtoDOS(s)

