class (RcbPartView) F134Part1View()
    initRcbPartView("1");

    private macro initialize()
        m_table.addColumn("Номер|строки",  10,  AL_LEFT);
        m_table.addColumn("Наименование показателя",  84, AL_LEFT);
        m_table.addColumn("Остаток на|отчетную дату",  17, AL_RIGHT);
    end;

    macro printHead()
        m_table.printHead();
        m_table.printString(strLpad("1", 4, " "),
                            strLpad("2", 42, " "),
                            strRpad("3", 8, " "));
    end;
end;

class (RcbReportView) F134ReportView
    initRcbReportView("РАСЧЕТ СОБСТВЕННЫХ СРЕДСТВ (КАПИТАЛА)", "0409134", RCB_PK_MONTH, DATE_OUT_PERIOD_FORMAT);

    private macro initialize()
        m_partViewPool.push_back(F134Part1View());
    end;
end;
