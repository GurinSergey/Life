                      "              T_CLOSE_DATE " +
                      "    FROM   dobjcode_dbt code, " +
                      "           dobjcode_dbt code1, " +
                      "           dparty_dbt party, " +
                      "           daccount_dbt acc, " +
                      "           dobjrgdoc_dbt rg " +
                      "   WHERE       code.t_codekind = 27 " +
