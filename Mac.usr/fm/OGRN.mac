   Getdate(startdate, "ç†Á†´Æ Ø•‡®Æ§†");
   Getdate(enddate, "äÆ≠•Ê Ø•‡®Æ§†"); 
   
   RS = RSDRecordset( "  SELECT   code1.t_code, " +
                      "           party.t_name, " +
                      "           DECODE (rg.t_docdate, " +
                      "                   TO_DATE ('01.01.0001', 'dd.mm.yyyy'), 'ç• ÆØ‡•§•´•≠Æ', " +
