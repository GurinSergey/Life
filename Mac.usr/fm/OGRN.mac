 import RSD, ActiveX, rslx, globals;

 MACRO PrintReport()
  var RS, ex, ob, obbook, obsheet, i=2, startdate, enddate;
  var out, output = "éÉêç1.xlt", fulloutput;

   GetRegistryValue("BANK_INI\\éÅôàÖ èÄêÄåÖíêõ\\ÑàêÖäíéêàà\\USERTEMPLSDIR", 2, out);
   Fulloutput = FindPath( output, out );                    
