end;

MACRO ArrToStr(arr)
  var i = 0, str="";
  while (i <= asize(arr))
     if(valtype(arr(i)) != 0 )
     str = str + " "+arr(i);
     end;
     i=i+1;
  end;
  return trim(str);
END;

