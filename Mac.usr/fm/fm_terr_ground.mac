macro STR_LPad (st, len, c, td)
private var n;
  if (Valtype(td) == V_Undef)
     td = FALSE;
  end;
  n = StrLen(st);
  while (n < len)
     st = c + st;
     n = StrLen(st);
  end;
  if(td and (n > len))
    st = SubStr(st, n - len + 1)
  end;
  return st;
end;


