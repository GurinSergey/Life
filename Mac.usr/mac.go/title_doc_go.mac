var ex, ob, XL_WorkBook_Path, obBook, obSheet, TempSheet;

macro openExcelWithoutTemplate(openFile)
	var out;
	if (IsStandAlone()) // 2х звенка
		if ((ValType(ex)!=V_UNDEF) and (ex.Visible==False))
			ex = ActiveX("Excel.Application",NULL,false); 
		else
			ex = ActiveX("Excel.Application",NULL,true);        
		end;
	else                // 3х звенка
		ob = CreateObject ("rsax","TRsAxServer","RsAxServer",false);
		ex = ob.CreateComObject ("Excel.Application");
	end; 

	if (openFile)
		ex.Visible = True;
		ex.application.defaultfilepath = XL_WorkBook_Path;
		obBook = ex.application.GetOpenFileName ("Все файлы (*.*),*.*", null, "Выберите файл для загрузки"); 
		if (XL_WorkBook_Path == v_undef)
			msgbox("Действие было отменено пользователем|Файл небыл загружен.");
			exit ();
		elif (XL_WorkBook_Path == false)
			msgbox ("Загружаемый файл не соответствует заданному формату.");
			exit ();
		end;
		obBook = ex.Workbooks.add (obBook);
		obSheet = obBook.ActiveSheet ();
		ex.Visible = False;
	else
		obBook = ex.Workbooks.add; 
		obSheet = obBook.ActiveSheet();
	end;
 
end;

macro get_mon(mon)
	if    (mon == 1)  return "января";
	elif  (mon == 2)  return "февраля";
	elif  (mon == 3)  return "марта";
	elif  (mon == 4)  return "апреля";
	elif  (mon == 5)  return "мая";
	elif  (mon == 6)  return "июня";
	elif  (mon == 7)  return "июля";
	elif  (mon == 8)  return "августа";
	elif  (mon == 9)  return "сентября";
	elif  (mon == 10) return "октября";
	elif  (mon == 11) return "ноября";
	elif  (mon == 12) return "декабрь";
	else 
	      return "---";
	end;
end;

macro setMoney_Array(parsMoney)
	var pos = StrBrk(string(parsMoney), ".");
	var resultArray = TArray;
	resultArray(0) = SubStr(string(parsMoney), 1, pos-1) + " руб.";
	resultArray(1) = SubStr(string(parsMoney), pos+1, 2) + " коп.";
	return	resultArray;
end;

