end;

MACRO Event (dlg, cmd, id, key)
   var const_message = "~F2~ Выполнить ";  
   if(cmd == DLG_INIT)
     message("~F2~ продолжить, ~F3~ Выбрать дату, ~ESC~ выход");
     dlg.rec.DateIn = {curdate}; 
     dlg.rec.CodeVal = "810";
     dlg.rec.NameVal = "Российский рубль";      
   elif (cmd == DLG_SETFOCUS)
      
      if (FldName(dlg, id) == "DateIn")
        message(const_message + "~F3~ Календарь");
      else
        message(const_message + "~F3~ Валюта");  
      end;
   end;
   if(KEY==KEY_F3)
      if (FldName(dlg, id) == "DateIn")
         dlg.rec.DateIn = GetDateByCalendar({curdate});           
      else
         var rcmd = RsdCommand ("SELECT t_fi_code, t_name  FROM  dfininstr_dbt where t_fi_kind = 1   order by t_fi_code");
         var rs = RSDRecordset(rcmd , RSDVAL_CLIENT, RSDVAL_STATIC );
     
         var col = TArray;
         AddCol (col, 0, "T_fi_code", "Код", null, true);
         AddCol (col, 1, "T_NAME", "Наименование",    null, true);
         if((RunScroll (rs, 2, col, "Blocked_claim", "EvProc", "Списокок валют", "~Enter~ выбор")) )  
             dlg.rec.CodeVal = rs.value("t_fi_code");
             dlg.rec.NameVal = rs.value("t_name");                           
         end;
                 
      end;
      UpdateFields(dlg);
   elif (KEY == KEY_F2)
        CodeVal = getFIID(dlg.rec.CodeVal);
        printReport();
        return CM_save;

   end;    
       UpdateFields(dlg); 
END;

     
  if (getSetting())
    if (RunDialog(dlg, "Event"))
    end;
  end;
