end;

macro ISTransitAcc(acc, fiid)

   private var cmd, rs;
   //Gurin S. 29.01.2014 R-322082-1 Адаптация 2031
   cmd = RSDCommand("select 1 from daccount_dbt where t_account =  ? and t_chapter = 1 and t_code_currency = ? and t_type_account like '%Y%'");
