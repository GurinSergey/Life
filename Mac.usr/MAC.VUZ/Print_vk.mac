   end;
   /* End Gregeradsky */

   if ((NeedPrintLog) or (valtype(NeedPrintLog) == V_UNDEF))
     println(ТекстУведомления(Client_name, paymentid, Currency_str, Value, Value_str, Account_Num, /*rs.value(0)*/Doc_date, Reply_date));

     if (ismassprint)
        println("");
     end;
     
     InsTrnsfNotify( paymentId, true );

     SetOutput(null,true);

