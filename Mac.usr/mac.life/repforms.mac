/* Макрос возвращает следующий месяц в сторону увеличения, */
/* если flag = true. Иначе - в сторону уменьшения          */
/* Возвращает 0 в случае ошибки                            */
MACRO GetNextMonth (mon:integer, flag:bool):integer //flag = false - prev month
   var i = 1;

   if (mon == 12)
      if (flag)
         return 1;
      else
         return 11;
      end;
   elif ( (mon < 12) and (mon > 0) )
      while (i < 12)
           if ( (mon == i) and (mon != 1) )
              if (flag)
                 return i + 1;
              else
                 return i - 1;
              end;
           elif ( (mon == i) and (mon == 1) )
              if (flag)
                 return i + 1;
              else
                 return 12;
              end;
           end;
         i = i + 1;
      end;
   else
      return 0;
   end; 
END;

