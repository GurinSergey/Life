MACRO SELECTDOC(DocKind:integer):integer
  var select:string;
  var params:TArray;
  var rs:object;
  var DocID:integer;
  select = "SELECT t_ObjID "            +
           "FROM dwlmeslnk_dbt ms "     +
           "WHERE ms.t_ObjKind = :kind "+
           "AND ms.t_MesID = :ID";
  params = makeArray(SQLParam("kind", DocKind),
                     SQLParam("ID", wlmes.MesID));
  rs = execSQLselect( select, params, FALSE );
  if( rs AND rs.moveNext() )
    DocID = rs.value(0);
    return DocID;
  else 
    return -1;
  end;        
END;

//По передаваемому wlmes ищем запись в wlmeslnk по неполному ключу
MACRO FindAllFile():integer
  var DocID:integer;
  DocID = -1;
  //ищем сначала по заявлениям на открытие, потом на закрытие, потом 
  //на изменение счета
  opena.RequestID = SELECTDOC(450);
  if(opena.RequestID > 0)  //на открытие
    if( GetEQ(opena) )
      return 1;
    end;
  end;
  closa.RequestID = SELECTDOC(451);
  if(closa.RequestID > 0)
    if( GetEQ(closa) )
      return 2;
    end;    
  end;   
  chnga.RequestID = SELECTDOC(452);
  if(chnga.RequestID > 0)
    if( GetEQ(chnga) )
      return 3; 
    end;
  end; 
  return 0;
END; 

