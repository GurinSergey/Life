IMPORT  PaymInter, OprInter, PTinter,BankInter,Rsbdataset;
IMPORT  "gstname.mac";
RECORD pspo_firstdoc (pspayord);

const   Ошибка   = 0,
        Первый   = 1,
        Последний= 2;

debugbreak;
MACRO Печать_ОтчетСканирования (Вызов,firstdoc,Статус,Сообщение)
   
        record pm_rmprop (pmrmprop);
        record pm_paym   (pmpaym);
        setbuff (pspo_firstdoc,firstdoc);
private Macro Prichina (pID);
var nott;
var query:string ="select utl_raw.cast_to_varchar2( t_text ) ExistNote "+ 
                  " from dnotetext_dbt where t_objecttype = 501 "+
                  " and t_documentid = lpad("+pID+", length(T_documentId), '0') and t_notekind = 42";
var rs:RsdRecordset = execSQLselect(query);
  if( rs.moveNext() )
    nott =" Причина: " + rs.Value(0);
    else
    nott = "";             
  end;
return nott;
end;
        if (Вызов==Первый)
[             		          Отчет о групповом создании операций для платежных документов.                               ];
[┌─────────┬─────────────┬──────────┬──────┬──────────────────────────────────────┬─────────────────────┬─────────────────────┐   ];
[│  Номер  │   Сумма     │   Дата   │Номер │                Сообщение             │     Код клиента     │   Счет плательщика  │   ];
[│документа│             │          │ошибки│                                      │                     │                     │   ];
[├─────────┼─────────────┼──────────┼──────┼──────────────────────────────────────┼─────────────────────┼─────────────────────┤               ];
        elif (Вызов==Ошибка)

                if (Статус == 0)
                        Сообщение = "Операция создана успешно";
                end;                                

                if ( FindPayment(
                        0,      /* Индентификатор неизвестен    */
                        PM_PURP_POPRIMARY,      /* Основной по клиентской платежке */
                        0,      /* Subpurpose                   */
                        PS_PAYORDER, /* Вид первичного документа */ 
                        pspo_firstdoc.OrderID,
                        true,   /* Поиск по реальной базе       */
                        pm_paym,
                        null,
                        null,
                        pm_rmprop
                        )       !=      0 )

// Str!
If(firstdoc.origin==2)
//MsgBox("КБ");
End;
                        Статус = 1;
                        Сообщение = "Не найдено платежное поручение";                                                                  
                        else Сообщение = Сообщение+". "+GetStepNameExecuteRead(pm_paym.PaymentID, pm_paym.DocKind, pm_paym.PaymStatus)+Prichina(pm_paym.PaymentID);  //Str!                      
                end;
[│#########│#############│##########│######│######################################│   ###############   │ ####################│  ](pm_rmprop.Number,pm_paym.Amount,pm_rmprop.Date,Статус,StrSubst(Сообщение, "|", " " ):w,ПолучитьКодСубъекта(pm_paym.payer,1):c,pm_paym.payeraccount);
                
        elif (Вызов==Последний)
[└─────────┴─────────────┴──────────┴──────┴──────────────────────────────────────┴─────────────────────┴─────────────────────┘];
        end;

END;