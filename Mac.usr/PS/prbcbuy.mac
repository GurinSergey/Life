//           WordDoc.Bookmarks("BankNameComiss").Range.Text  = "ОАО \"Газэнергобанк\"";
        elif(fgBank.is_EXV)
           WordDoc.Bookmarks("BankName").Range.Text  = "ЗАО АКБ \"Экспресс-Волга\"";
//           WordDoc.Bookmarks("BankNameComiss").Range.Text  = "ЗАО АКБ \"Экспресс-Волга\"";
