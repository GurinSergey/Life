/*31.01.2011 Зленко М. избавляемся от ИП */ 
macro cutFIO(_FIO)
   var rep: Tarray = Tarray();
   var   tmprep:Tarray = Tarray(); 
   var i:integer = 0, k:integer = 0;
 
   rep(rep.size) = "ИП";  
   rep(rep.size) = "(ИП)"; 
   rep(rep.size) = "ИНДИВИДУАЛЬНЫЙ";
   rep(rep.size) = "ПРЕДПРИНИМАТЕЛЬ";
   rep(rep.size) = "НОТАРИУС";
   
   var f = split(trim(_FIO)," "); 
   while (i < f.size)
     tmprep(tmprep.size) = strUpr(f(i));
     k = 0;
     while (k < rep.size)
       if (tmprep(i) == rep(k))
         _FIO = strsubst(_FIO,f(i),""); 
         _FIO = strsubst(_FIO,"  "," ");   
       end;
     k = k + 1;
     end;
   i = i + 1; 
   end;
return trim(_FIO);
end;

