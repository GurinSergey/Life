//Получаем ID клиента по его ИНН
macro  GetPartyidByINN(inn,kpp)

  var ptid = -1,error=0;
  var sql, cmd, rs, col = TArray;
  var sqlcount, cmdcount, rscount, count = 0;
  var inn_kpp:string = "";

  /*Обработчик RunScrolla*/
  macro EvProc (rs, cmd, id, key )

    if (cmd == DLG_KEY) 
      if ((key == KEY_ENTER) or (key == KEY_F2))
        return CM_SELECT;
      elif (key == KEY_ESC)
        msgbox("Не выбран клиент. |Выберите клиента. ");
        return CM_IGNORE;
      end;
    end;
  end;

  macro AddCol (ar,ind, fld, head, width, rdonly, DecPoint)
    ar.value (ind * 6)     = fld;
    ar.value (ind * 6 + 1) = head;
    ar.value (ind * 6 + 2) = width;
    ar.value (ind * 6 + 3 ) = 0;   // fldType
    ar.value (ind * 6 + 4 ) = decPoint;  // decPoint
    ar.value (ind * 6 + 5 ) = 0;   // reserv
  end;

  if(strlen(trim(inn)) == 10)
     ptid = ПолучитьКодСубъекта(inn+"/"+kpp, PTCK_INN/*16*/, Error );
     inn_kpp = inn+"/"+kpp;
  else
     ptid = ПолучитьКодСубъекта(inn, PTCK_INN/*16*/, Error );
     inn_kpp = inn;
  end;
   
  if((strlen(trim(inn)) == 10) and (error != 0))
    error = 0;
    ptid = ПолучитьКодСубъекта(inn, PTCK_INN/*16*/, Error );
    inn_kpp = inn;
  end;
  sqlcount  =  " SELECT Count(party.t_partyid) AS count " +
               "   FROM dobjcode_dbt obj, dparty_dbt party " +
               "  WHERE obj.t_code LIKE '" + inn_kpp + "%' " +
               "    AND obj.t_codekind = 16 " +
               "    AND obj.t_state = 0 " +
               "    AND obj.t_objecttype = 3 " +
               "    AND obj.t_objectid = party.t_partyid ";
    
  cmdcount = RSDCommand(sqlcount);
  rscount = RSDRecordSet(cmdcount);

  if (rscount and rscount.Movenext)
    count = rscount.value(0);
  end;

 /*zmp 02.10.2012 I-00261345-2 - Если есть больше одного субъекта экономики
  с одинаковыми кодами выводим их в скроллинг
 */
  if ((error != 0) or (count > 1))     
        
    sql = " SELECT obj.t_code AS code, party.t_name AS name, party.t_partyid AS id " +
          "   FROM dobjcode_dbt obj, dparty_dbt party " +
          "  WHERE obj.t_code LIKE '" + inn_kpp + "%' " +
          "    AND obj.t_codekind = 16 " +
          "    AND obj.t_state = 0 " +
          "    AND obj.t_objecttype = 3 " +
          "    AND obj.t_objectid = party.t_partyid ";
          
    cmd = RSDCommand(sql);
    rs = RSDRecordset( cmd, RSDVAL_CLIENT, RSDVAL_STATIC );

    AddCol (col, 0, "code",    "Код",          22, true);
    AddCol (col, 1, "name",    "Наименование", 40, true);
    AddCol (col, 2, "id",      "ИД субъекта",  10, true);

    if (count > 1)
       if (RunScroll (rs, 3, col, "ListParty", "EvProc", "Выберите клиента", "~Enter~ выбор"))
         ptid = rs.value(2);
       else
         ptid = -1;
       end;
    elif (count == 1)
      if (rs and rs.movenext)
        ptid = rs.value(2);
      else
        ptid = -1;
      end;
    else
      ptid = -1;
    end;
  end;

  return ptid;
end;

macro array_to_str(arr,delim)
   var i = 0, text = "";
   while (i < arr.size)
      text = text + arr[i] + delim;
      i = i+1;
   end;

   text = substr(text, 1, strlen(text)-strlen(delim));
   return text;
end;

