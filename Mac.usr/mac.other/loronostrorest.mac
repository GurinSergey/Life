macro EvMacro (dlg, cmd, id, key)

  if (cmd==DLG_INIT)
    	message("~F2~ продолжить,  ~ESC~ выход");
     dlg.rec.Date_field = {curdate};

//     dlg.rec.acc ="nostro";
  end;

  if (cmd == DLG_REMFOCUS)
    if (FldName(dlg,id)=="Date_field")
       if ( dlg.rec.Date_field > {curdate} )
          MsgBox("Дата начала больше даты текущего операционного дня"); 
          return CM_CANCEL;
       end;

    end;
    UpdateFields(dlg); 
  end;    






  if (cmd==DLG_KEY)
    if (KEY==KEY_F9)
	return CM_ignore;
    end; //if F9

    if (KEY==KEY_ENTER)
	return CM_ignore;
    end; //if F9

    if (KEY==KEY_F3)
    if (FldName(dlg,id)=="lor_nor_fld")
     m1 = menu(mn1);
     //debugbreak;
     if (m1 == 0)
     	 dlg.rec.lor_nor_fld=loro;
     elif (m1 == 1)
     	 dlg.rec.lor_nor_fld=nostro;
     else
     end;
    end;
    if (FldName(dlg,id)=="tip_ot4eta_fld")
     m2 = menu(mn2);
     if (m2 == 0)
     	 dlg.rec.tip_ot4eta_fld=ostatki_na_datu;
     elif (m2 == 1)
     	 dlg.rec.tip_ot4eta_fld=podtv;
     else
     end;
    end;
      return CM_ignore;
    end; //if F3

    if (KEY==KEY_F2)
    	if ((dlg.rec.lor_nor_fld==loro)and(dlg.rec.tip_ot4eta_fld==ostatki_na_datu)) outputinexel(dlg.rec.date_field); toexel=true;return CM_save; end;
    	if ((dlg.rec.lor_nor_fld==loro)and(dlg.rec.tip_ot4eta_fld==podtv)) outputinfileloro(dlg.rec.date_field); toexel=true;println(" ");println("           файлы подтверждений создаются в директории "+path_dir_loro);return CM_save; end;
    	if ((dlg.rec.lor_nor_fld==nostro)and(dlg.rec.tip_ot4eta_fld==podtv)) outputinfilenostro(dlg.rec.date_field); println(" ");println("           файлы подтверждений создаются в директории "+path_dir_nostro);toexel=false; return CM_save; end;
    end; //if F2

    if (KEY==KEY_ESC)
      exit(1);
      return CM_CANCEL;
    end; //if esc

  end; //if DLG_KEY
END; //evmacro





