macro ПечатьРаспоряжения(PrimDoc, PrimDocKind, ИсправляемыйДокумент : RsbAccTransaction)
  var Report1 : ReportLib;
  var rs;
  var PaymentObj : RsbPayment;
  if((PrimDocKind == DLDOC_MEMORIALORDER) or (PrimDocKind == CB_MULTYDOC) or (PrimDocKind == 286))
    if( not GetAccIspr(accispr, PrimDoc, PrimDocKind))
      return;
    end;
    PaymentObj = RsbPayment(accispr.DocumentID);
  else
    return;
  end;
  if(accispr.SrcDocKind > 0)
    if(ИсправляемыйДокумент == null)
      ПечатьИсправляемогоДокумента(Report1, CarryIspr);
    else
      ПечатьИсправляемогоДокумента(Report1, ИсправляемыйДокумент);
    end;
  end;
  rs = GetDocumentsByCorrDocID(accispr.CorrDocID);
  while(rs and rs.moveNext())
    ПечатьИсправительногоДокумента(Report1, rs.value(0), rs.value(1), rs.value(2));
  end;
  
end;

