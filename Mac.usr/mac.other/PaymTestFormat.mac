const pay_rec_len = 160;
const grnd_len = 210;

/* Проверка на длину полей */
macro ПроверитьПоФорматуУФЭБС(Paym)

  var str = "";

    str = trim(Paym.PayerName);
      if(strlen(str) > pay_rec_len)
        return "Длина поля 'Плательщик' превышает допустимые 160 символов";
      end;

    str = trim(Paym.ReceiverName);
      if(strlen(str) > pay_rec_len)
        return "Длина поля 'Получатель' превышает допустимые 160 символов";
      end;

    str = trim(Paym.Ground);
      if(strlen(str) > grnd_len)
        return "Длина поля 'Назначение платежа' превышает допустимые 210 символов";
      end;

  return "";

end;
