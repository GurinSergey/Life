private macro GetPath( a )

        var sql , rs, path = "", prev;
        prev = a;
    //  println("!!!");
        while (prev!=0)
//      println("///");

                sql = " select t_parentid, t_name from dregparm_dbt where t_keyid = '"+prev+"' ";
                rs = RsdRecordset(sql);
                rs.movenext();
                //Gurin S. 23.07.2015 R-607300-2
                if (ValType(rs.value(1)) != 26)
                   path =  rs.value(1) +"\\"+ path;
                   prev = rs.value(0);
                else
                   prev = 0;
                end;
        end;
       return path
end;


