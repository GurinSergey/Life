      Code,
      Sums;

  var pos, restStr;
  var p_CodeBeg = 0,
      p_CodeEnd = 0,
      p_DealDelim = 0;

  var first = true;


  NoteStr = ReadNoteForPayment ( PaymID, NOTE_KIND_VOCodes );
  /// ¯à®¢¥àª  ­  ; ¢ ª®­æ¥
  var last_symb;
	last_symb = strlen(NoteStr);
	if(last_symb>0)
   	if (substr(NoteStr,last_symb,1)!=";")
      NoteStr = NoteStr+";";
   	end;
	end;

