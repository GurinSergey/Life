                 STR_Sums = STR_Sums + "\n";
              end;
              
              STR_Sums = STR_Sums + money(Sums);
           end;

           //msgbox (STR_Pasp, " - ", STR_Code, " - ", STR_Sums);

           /* ' ¡ð¿÷R<ÿ ; ðýá¢ ¡<?ý£®©ðc òRý '? */
           restStr = subStr( restStr, p_DealDelim+1 );

           first = false;
        //else
