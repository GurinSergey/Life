           Code = subStr( restStr, p_CodeBeg+1, (p_CodeEnd - p_CodeBeg)-1 );
           Sums = subStr( restStr, p_CodeEnd+1, (p_DealDelim - p_CodeEnd)-1 );

           if ( strUpr(Pasp) != "••••••••/2412/0000/•/0" )
              STR_Pasp = STR_Pasp + " " + Pasp;
           end;
         //msgbox(strUpr(Code));
