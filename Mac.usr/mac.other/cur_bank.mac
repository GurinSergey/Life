/* ------------------------------------------------------------------------ */
macro CorAccInter(NumSchem, Code_Currency, fBase, O)   /* коррсчет */

  if( ValType(NumSchem) == V_UNDEF )
    NumSchem = 0 ;
  end ;
  if( ValType(Code_Currency) == V_UNDEF )
    Code_Currency = 0 ;
  end ;

  if( ValType(fBase) == V_UNDEF )
    fBase = TbFile("corschem.dbt", "R", 0) ;
  end ;

  fBase.Rec.Code_Currency = Code_Currency ;
  fBase.Rec.Number = NumSchem ;

  if( fBase.GetEQ )
    if(ValType(O) == V_UNDEF)
      return fBase.Rec.FDebetCAD ;   //Банк дебет начальные
    else
      if(O == 0)
        return fBase.Rec.ODebetCAD ; //Банк дебет ответные
      elif(O == 1)
        return fBase.Rec.OKreditCAD ;//Банк кредит ответные
      elif(O == 2)
        return fBase.Rec.FKreditCAD ;//Банк кредит начальные
      end;   
    end;
  end ;
  return "" ;
end ; /* CorAccInter */

