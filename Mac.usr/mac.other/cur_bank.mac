MACRO PlaceBank( BIK )
   file _bank (bankdprt);   /* Справочник отделений банков */

   _bank.MFO_Depart = BIK;
   _bank.Corr_Acc   = "";
   if (( getGE(_bank) ) and ( _bank.MFO_Depart == BIK ))
     return _bank.szPlace + " " + _bank.NamePlace;
   end;
   return "";
END;

