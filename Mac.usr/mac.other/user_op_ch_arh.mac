ExecmacroFile("lib_log.mac", "LogProcedure", "user_op_ch_arh.mac");

//====================================Редактировал Агеев С.В. 
var path:string;
var lbr_name="user_op_ch_arh.lbr";

GetRegistryValue("BANK_INI\\ОБЩИЕ ПАРАМЕТРЫ\\ДИРЕКТОРИИ\\LBRDIR",2,path);
path = FindPath(lbr_name, path);
var dlg = TRecHandler("oper_ch", path, TRUE); 
//===========================================================


var RecordSet;
var key;

macro scroll ();  //скролинг
     var CmdText,Command;
     var col = TArray;

     macro EvProc (RecordSet, Command, id, key )
        if ((Command == DLG_KEY) and (key == 13))
          dlg.rec.user_num =  RecordSet.value(0);
          dlg.rec.user_fio =  RecordSet.value(1);
	   UpdateFields(dlg);
        return CM_select;       
       end;

     end;

  macro AddCol (ar,ind, fld, head, width, rdonly)
    ar.value (ind * 6)     = fld;
    ar.value (ind * 6 + 1) = head;
    ar.value (ind * 6 + 2) = width;
    ar.value (ind * 6 + 3 ) = 2;   // fldType
    ar.value (ind * 6 + 4 ) = -1;  // decPoint
    ar.value (ind * 6 + 5 ) = 0;   // reserv
  end;


  AddCol (col, 0, "t_oper", null, 10, true);
  AddCol (col, 1, "t_name", null, 35, true);
      CmdText = "SELECT t_oper , t_name  "+
                 "FROM dperson_dbt "+
                 "Order by t_oper";

      Command = RSDCommand(CmdText);
      Command.Execute();

      RecordSet = RSDRecordSet(Command, RSDVAL_CLIENT, RSDVAL_STATIC);
      runScroll(RecordSet, 2, col, null, @EvProc, "Список пользователей", "~Enter~   Выбор", false);	
end;


macro dialog_obr(dlg, cmd, id, key);   //диалог
 var CmdText,Command;

 message("F2 Выполнить  F3 Выбор");
 if ( (key == 317) and (id == 0) )
        scroll();	
 end;
 if ( cmd == DLG_REMFOCUS )
   //   msgbox(	dlg.user_num);
      CmdText = "SELECT  t_name  "+
                 "FROM dperson_dbt "+
                 "where t_oper = "+ dlg.rec.user_num;

      Command = RSDCommand(CmdText);
      Command.Execute();
      RecordSet = RSDRecordSet(Command, RSDVAL_CLIENT, RSDVAL_STATIC);
      RecordSet.movenext;	
      dlg.rec.user_fio =  RecordSet.value(0);
      UpdateFields(dlg);
 end; 

    if ( (key == 316)/* or (key == 323)*/ ) //F2
	if(dlg.rec.user_dd ==0)	
//	       msgbox("Колличество дней доступа в архив не может быть нулевым!!!");
		SetRegistryValue("COMMON\\ОПЕРАЦИОННЫЕ ДНИ\\ГЛУБИНА АРХИВА", dlg.rec.user_dd , dlg.rec.user_num );
              CmdText = "delete dregval_dbt "+ 
                         "Where t_keyid = '3536' and t_objectid = "+ dlg.rec.user_num; 
               Command = RSDCommand(CmdText);
               Command.Execute();    

               CmdText = "Commit"; 
               Command = RSDCommand(CmdText);
               Command.Execute();
               println("Для пользователя №"+ dlg.rec.user_num + " " +dlg.rec.user_fio+ " было установлено " + dlg.rec.user_dd + " дней для работы в архиве" );		
               return CM_SAVE;

	else  
      
		 SetRegistryValue("COMMON\\ОПЕРАЦИОННЫЕ ДНИ\\ГЛУБИНА АРХИВА", dlg.rec.user_dd , dlg.rec.user_num );
               println("Для пользователя №"+ dlg.rec.user_num + " " +dlg.rec.user_fio+ " было установлено " + dlg.rec.user_dd + " дней для работы в архиве" );		
               return CM_SAVE;
	
     	end;
   end;


end;

RunDialog (dlg, @dialog_obr);


