       i = i + 1;
    end;

    [                                   └───────────────────────────┼─────────────────────┴─────┤     
      ИНН ############                  Счет № #################### │                           │]
      (d.ReceiverINN, d.CreditList2.value(0).Account:l);
    i = 1;
    while( i < d.CreditList2.size )
