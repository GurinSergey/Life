// первый параметр строка, передается по ссылке. второй - номер из ТЗ. передается по значению.
MACRO get_string_2_front_connect(string_connect:@string,nomer_str)
	//debugbreak;
	private var sql="select * from usr_route_parm where bo_id="+string(nomer_str)+" and state=0 ";
	private var ds=trsbdataset(sql);
	if  (ds.movenext())
		if (ds.value("state")==0) 
			string_connect=ds.value("connstring"); 
			return 0;
		else 
			string_connect="нет строки коннекта с таким номером в открытом статусе";
			return -1;
		end;
	else
		string_connect="нет строки коннекта с таким номером и в открытом статусе";
		return -1;
	end;
END;