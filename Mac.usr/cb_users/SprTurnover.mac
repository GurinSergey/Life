   /* Процедура возвращает кол-во дней в месяце*/
   MACRO DaysInMonth (mon, year)
      array v_daysInMonth; 
      v_daysInMonth(1) = 31;
      v_daysInMonth(2) = 28;
      v_daysInMonth(3) = 31;
      v_daysInMonth(4) = 30;
      v_daysInMonth(5) = 31;
      v_daysInMonth(6) = 30;            
      v_daysInMonth(7) = 31;
      v_daysInMonth(8) = 31;
      v_daysInMonth(9) = 30;
      v_daysInMonth(10) = 31;
      v_daysInMonth(11) = 30;
      v_daysInMonth(12) = 31;            
      if ((mon == 2) and (mod(year, 4) == 0))
	      v_daysInMonth(2) = 29;      	
      end;      	
   	return v_daysInMonth(mon);
   end;


