   /*Обработчик диалоговой панели ввода исходных данных для печати*/
   MACRO Event (dlg, cmd, id, key) 
   var mess = "~F2~ Продолжить  ~ESC~ Выход " ;
/*      
      var PartyID:integer = {OurBank};
      var OrgDate:date = {curdate} + 1;
      var NoChangeDate:bool = false;
*/
      if(cmd == DLG_INIT)
         dlg.rec.Acc       = Acc;
//         dlg.NumDep = "";
//         dlg.Dep = "По всем отделам" ;       
         UpdateFields(dlg); 
      end;
      
      if (cmd==DLG_SETFOCUS)
        message(mess);        
      end;

      if (cmd==DLG_KEY)
        if (KEY==KEY_ESC)
           return CM_CANCEL;

        elif (KEY==KEY_ENTER)
           return CM_IGNORE;
           
        elif (KEY==KEY_F2)
          var fgBank = fg_life_subject({OurBank}); // KS 10.08.2010 I-058375 Шаблон ДБК нужен только для ПРББ
          if ((dlg.rec.button == "X") and ((fgBank.is_PRBB) or (fgBank.is_GEB)))
              templ = "SprAcconfDkb.dot";
          else
              templ = "SprAcconf.dot";
          end;
          
          if (FldName(dlg,id)=="Acc")
            if (StrLen(dlg.rec.acc) < 20)
              MsgBox("Длина счета менее 20 символов");
              return CM_IGNORE;
            elif (not GetAccount(StrSubst(dlg.rec.acc, "'", "")))
              MSgBox("Счет отсутствует в справочнике лицевых счетов");
              return CM_IGNORE;
            elif (accclose == "З")
              MSgBox("Счет закрыт");
              return CM_IGNORE;
            end;
              
            Client = GetClientByAccount(dlg.rec.acc, Chapter, Code);
            Branch = GetBranchByAccount(dlg.rec.acc, Chapter, Code);
            acbalance = GetBalanceByAccount(dlg.rec.acc, Chapter, Code);
            curSymb = substr(acbalance, 1, 3);
            if (not ((int(curSymb) >= 401) and (int(curSymb) <= 408))) 
              MsgBox("Балансовый счет первого порядка должен быть в диапазоне 401 - 408");
              return CM_IGNORE;
            end;
          end;
          UpdateFields(dlg); 
          Account = dlg.rec.acc;
       /*   NumDep = dlg.NumDep;
          Dep = dlg.Dep;        */
          Return CM_SAVE;

        elif (KEY==KEY_SPACE)
            if(FldName(dlg,id)=="button")
                if (dlg.rec.button == "")
                    dlg.rec.button = "X";
                else
                    dlg.rec.button = "";
                end;
            end;
        end;
      end;
   END;
  
  if ( RunDialog(Dlg, "Event"))
     PrintSprAcc();
  end;
exit(1);
END;
