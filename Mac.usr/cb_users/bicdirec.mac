[ +-------------+----------------------+----------------+                      ];
[ | M           | изменение            |################|                      ] (RecCountM:c);
[ +-------------+----------------------+----------------+                      ];
[ | D           | удаление             |################|                      ] (RecCountD:c);
[ +-------------+----------------------+----------------+                      ];
[ | U           | без изменения        |################|                      ] (RecCountU:c);
[ +-------------+----------------------+----------------+                      ];
[                                                                              ];

