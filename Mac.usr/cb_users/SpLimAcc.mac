   /*Обработчик диалоговой панели ввода исходных данных для печати*/
   MACRO Event (dlg, cmd, id, key) 

      var mess = "~F2~ Продолжить  ~ESC~ Выход ";

      if(cmd == DLG_INIT)
         dlg.rec.Account_num = Acc;
         dlg.rec.Date_report = {curdate};

         UpdateFields(dlg); 
      end;
      
      if (cmd==DLG_SETFOCUS)

        message(mess);        
      end;
      
      if ((cmd == DLG_REMFOCUS))
        if (FldName(dlg,id)=="Account_num")
           if (StrLen(dlg.rec.Account_num) < 20)
              MsgBox("Длина счета менее 20 символов");
              return CM_CANCEL;
           elif (not GetAccount(StrSubst(dlg.rec.Account_num, "'", "")))
              MSgBox("Счет отсутствует в справочнике лицевых счетов");
              return CM_CANCEL;
           else
              Client = GetClientByAccount(dlg.rec.Account_num, Chapter, Code);
              Branch = GetBranchByAccount(dlg.rec.Account_num, Chapter, Code);
           end;
        
        
        elif (FldName(dlg,id)=="Date_Report")
           if ( dlg.rec.Date_report > {curdate} )
              MsgBox("Дата отчета больше даты текущего операционного дня"); 
              return CM_CANCEL;
           end;
/*
        elif (FldName(dlg,id)=="numdep")
           if ((GetDep1Name(dlg.NumDep) == "" ) and (dlg.NumDep != "")) //voikin добавил возможность выбора отчета по всему банку
              msgbox("Отдел "+dlg.NumDep+" не найден ");
              UpdateFields(dlg);
              return CM_CANCEL;
           else
              if (dlg.NumDep == "")
                 dlg.Dep = "По всем отделам";
              else
                 dlg.Dep = GetDep1Name(dlg.NumDep);
              end;
              UpdateFields(dlg);
           end;
*/
        end;
        UpdateFields(dlg); 
      end; 

      if (cmd==DLG_KEY)
        if (KEY==KEY_ESC)
           return CM_CANCEL;
                        
        elif ( KEY==KEY_F2 )
               
           Account_num = StrSubst(dlg.rec.Account_num, "'", "");
           Date_report = dlg.rec.Date_report; 
           var fgBank = fg_life_subject({OurBank}); // KS 10.08.2010 I-058375 Шаблон ДБК нужен только для ПРББ
           if ((dlg.rec.button == "X") and ((fgBank.is_PRBB) or (fgBank.is_GEB)))
               templ = "SpLimAccDkb.dot";
           else
               templ = "SpLimAcc.dot";
           end;
          /*02/09/2008 Новиков С. С. добавил возможность формирования отчета только при корректных значениях*/
          if ((StrLen(Account_num) == 20) and (GetAccount(StrSubst(dlg.rec.Account_num, "'", "")))and (dlg.rec.Date_Report <= {curdate}))
            Return CM_SAVE;
          else
            MsgBox("Не все поля корректны!");
          end;
         /***************************************************************************************************/
              
        elif ( (KEY==KEY_ENTER) and (FldName(dlg,id)=="Date_Report") )
            SetFocus(dlg, 0);
            Return CM_IGNORE;

        elif (KEY==KEY_SPACE)
            if(FldName(dlg,id)=="button")
                if (dlg.rec.button == "")
                    dlg.rec.button = "X";
                else
                    dlg.rec.button = "";
                end;
            end;
         end;
      end;
   END;

