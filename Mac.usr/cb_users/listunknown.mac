/* Перечень ответных межбанковских документов, поступивших для зачисления на счет
и находящихся на картотеке невыясненных сумм - вызов по ALT+F10 из скроллинга счетов ББ, гл.кн. РКО
SDA
*/

import BankInter, rsd, PaymInter;
import globals;




private var sql, cmd, rs;
var valdate = {curdate};
var ColInfo = TArray;


private macro AddCol (ar,ind, fld, head, width, rdonly, fldType, decPoint )

        if( ValType(fldType) == V_UNDEF )
            fldType = 0;
        end;

        if( ValType(decPoint) == V_UNDEF )
            decPoint = -1;
        end;

        ar.value (ind * 6) = fld;
        ar.value (ind * 6 + 1) = head;
        ar.value (ind * 6 + 2) = width;
        ar.value (ind * 6 + 3 ) = fldType;
        ar.value (ind * 6 + 4 ) = decPoint;
        ar.value (ind * 6 + 5 ) = 0; // reserv
end;





private macro HandleScroll (rs, cmd, id, key )

       if( cmd == DLG_KEY )
              if( key == 13 )
			PM_PROCESSPANEL( RsbPayment( rs.value("t_paymentid") ) );
		end;
		
	end;

	return CM_DEFAULT;
end;

       /**********/
macro Main(acc);

SQL = " SELECT pm.t_paymentid, pm.t_paymstatus, rm.t_number, rm.t_date, "
 "\n       propd.t_bankcode t_payerbankcode, pm.t_payeraccount, pm.t_amount, "
 "\n       rm.T_PAYERNAME, rm.t_ground "
 "\n  FROM dpmpaym_dbt pm, "
 "\n       dpmprop_dbt propd, "
 "\n       dpmprop_dbt propk, "
 "\n       dpmrmprop_dbt rm, "
 "\n       drminprop_dbt rmi "
 "\n WHERE pm.t_receiveraccount = ? "
 "\n   AND pm.t_paymstatus != 32000 "
 "\n   AND propd.t_debetcredit = 0 "
 "\n   AND propd.t_paymentid = pm.t_paymentid "
 "\n   AND propk.t_debetcredit = 1 "
 "\n   AND propk.t_paymentid = pm.t_paymentid "
 "\n   AND rm.t_paymentid = pm.t_paymentid "
 "\n   AND rmi.t_paymentid = pm.t_paymentid "
 "\n   AND rmi.t_closed != CHR (88) ";
  

    	cmd = RsdCommand( sql );
        cmd.AddParam( "vd", RSDBP_IN, acc );
    	rs = RsdRecordset (cmd, RSDVAL_CLIENT, RSDVAL_STATIC);
      	rs.NullConversion = true;
    
    	BegAction (1000, "Ждите...", true);
    	rs.MoveNext ();
    	EndAction ();

       AddCol(ColInfo, 0, "t_number",           "Номер",            6, true);
       AddCol(ColInfo, 1, "t_date",             "Дата",             8, true);
       AddCol(ColInfo, 2, "t_amount",           "Сумма ",      8, true);
       AddCol(ColInfo, 3, "t_payerbankcode",    "Банк плательщика", 9, true);
       AddCol(ColInfo, 4, "t_payeraccount",     "Счет плательщика", 20, true);
       AddCol(ColInfo, 5, "T_PAYERNAME",        "Плательщик",  20, true);
       AddCol(ColInfo, 6, "t_ground",           "Назначение платежа", 40, true);             
       AddCol(ColInfo, 7, "t_paymentid",        "ID",               10, true);
       RunScroll (rs,      
                           ColInfo.Size / 6, 
                           ColInfo, 
                           "listnocarry", 
                           "HandleScroll", 
                           string("Документы в картотеке невыясненных сумм поступившие на счет ",acc ),
                           "Esc Отмена   Enter Выбор", 
                           true, // read-only
                           null, // x
                           null, // y
                           200, // cx
                           50   // cy   

                          );
           


	exit(1);
end;