        InitOper  = int(rs.Value("t_init_oper"));
        DateKontr = date(rs.Value("t_syst_date")); //   â®â á«ãç ©, ¥á«¨ ¯®­ ¤®¡¨âáï ¢ë¢®¤¨âì á¨áâ¥¬­ã ¤ âã,   ­¥ ¤ âã ®¯¥à¤­ï
        //DateKontr = date(rs.Value("t_start_date")); 
