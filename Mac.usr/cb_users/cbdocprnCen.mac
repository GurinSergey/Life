  rsd = RSDRecordset(cmd);

  while(rsd.MoveNext())
    if (rsd.value(0) == 103)
      Document_name = rsd.value(1);
    elif (rsd.value(0) == 106)
      oper_name = rsd.value(1);
    end;
  end;

