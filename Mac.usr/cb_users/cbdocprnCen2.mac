     return stat;

  end;

  FIOOper  = GetFIOOper(cbdoc.oper);
  if (GetOprStat(pmpaym.PaymentId, cbdoc.Kind_Operation, pmpaym.DocKind))
     if ( (pmpaym.PaymStatus > 0) and (InitOper != 0))
        FIOKontr = GetFIOOper(InitOper);
     end;
  end;
  if (DateKontr < dateDoc)
     DateKontr = dateDoc;
  end;
  
  while(NumCopy != 0)
