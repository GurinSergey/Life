                    iRow = iRow + 4;
                end;
                iCol = iRow;
            end;
            iRow = iRow + 1;
            y=rs.movenext();
        end;
        ActiveSheet.Range(ActiveSheet.Cells(iCol, 1), ActiveSheet.Cells(iRow, 15)).Select;
        ExcelApplication.Selection.Borders.LineStyle = xlContinuous;
    end;

end;
