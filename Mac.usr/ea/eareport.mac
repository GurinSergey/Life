        ExcelApplication.Selection.Borders.LineStyle = xlContinuous;

    elif (Det_ == 1)
        ActiveSheet.Cells(2,"A").Value = "Свод документов дня за " + Data;
        ActiveSheet.Cells(3,"A").Value = string((Razd+1):0:0)+". "+aRazdel(Razd);
        iRow = 7; iCol = 1;
        if ( y )
            nRazd = rs.value("txt1");
        end;
        while ( y )
            if ( nRazd != rs.value("txt1") )
                nRazd = rs.value("txt1");
                iRow = iRow + 2;
                first = true;
            end;
            if ( first )
                first = false;
            end;
            iRow = iRow + 1;
            y=rs.movenext();
        end;
        iRow = iRow + 2;
        ActiveSheet.Range(ActiveSheet.Cells(7, 1), ActiveSheet.Cells(iRow, 15)).Select;
