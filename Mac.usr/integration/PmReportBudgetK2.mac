          "                   WHERE   lnk.t_initialpayment = pm.t_paymentid                      "+
          "                           AND lnk.t_paymlinkid =                                     "+
          "                                 (SELECT   MAX (t_paymlinkid)                         "+
          "                                    FROM   dpmlink_dbt                                "+
          "                                   WHERE   lnk.t_initialpayment = t_initialpayment))  "+
          "              ELSE                                                                    "+
          "                 pm.T_AMOUNT                                                          "+
          "           END                                                                        "+
          "              summ,                                                                   "+
          "           pm.t_payer payer                                                           "+
          "   FROM    doprtemp_tmp tmp,                                                          "+
          "           doprstep_dbt st,                                                           "+
