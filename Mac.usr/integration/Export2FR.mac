if( err != 0)
   msgbox("Не определена директория временных файлов");
   exit(1);
end;

GetRegistryValue("BANK_INI\\ОБЩИЕ ПАРАМЕТРЫ\\ДИРЕКТОРИИ\\USERTEMPLSDIR", V_STRING, out, err);

if( err != 0)
   msgbox("Не определена директория шаблонов");
   exit(1);
end;

file SRC() dbf;

file fBankDbf() write dbf ;

 expbank = FindPath("expbank.dbf", out);

 if( not Open(SRC,expbank))
