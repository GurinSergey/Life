file fOurBankDbf() write dbf ;

// expbank = FindPath("expbank.dbf", out);

 if( not Open(SRC,expbank))
     MsgBox( "Невозможно открыть эталонный файл " );
    return 1;
  end;

  if( not clone(SRC, TempDir+"\\expourb." + UserNumber()) )
