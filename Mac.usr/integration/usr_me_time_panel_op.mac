macro EventProc (rs, Command, id, key )  
    if((Command == DLG_KEY) and (key == KEY_ENTER))
        return CM_SELECT;
    elif ((Command == DLG_KEY) and (key == KEY_ESC))
        return CM_CANCEL;
    else
        CM_IGNORE;
