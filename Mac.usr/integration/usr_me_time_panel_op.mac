end;
  
//Является ли строка числом
macro Is_Digit( str )
    var isdigit, digit="1234567890";
    var i, n, cur_symb;

    isdigit = true;
    i = 1;
    n = strlen(str);
    while( (isdigit) and (i <= n) )
        cur_symb = SubStr(str, i, 1);
        
        if(index(digit,cur_symb) == 0)
            isdigit = false;
        end;
        
        i = i+1;
    end;

    return isdigit;
end;

//Проверка правильности заполнения поля
private macro check_time(tm)
    var hh,mm,ss,ms;
    var pos;

    if ((substr(tm,3,1)!= ":") or (substr(tm,6,1)!= ":") or (substr(tm,9,1)!= "."))
        msgbox("Не правильно задано время!|| Формат: ЧЧ:ММ:СС.МС");
        return false;
    end;

    hh = int(substr(tm,1,2));
    mm = int(substr(tm,4,2));
    ss = int(substr(tm,7,2));
    ms = int(substr(tm,10));

    if(not is_digit(substr(tm,1,2)))
        msgbox("В часах есть недопустимые символы!");
        return false;
    end;

    if((hh < 0) or (hh > 23))
        msgbox("Часы должны быть в диапазоне 0-23!");
        return false;
    end;

    if(not is_digit(substr(tm,4,2)))
        msgbox("В минутах есть недопустимые символы!");
        return false;
    end;

    if((mm < 0) or (mm > 59))
        msgbox("Минуты должны быть в диапазоне 0-59!");
        return false;
    end;

    if(not is_digit(substr(tm,7,2)))
        msgbox("В секундах есть недопустимые символы!");
        return false;
    end;

    if((ss < 0) or (ss > 59))
        msgbox("Секунды должны быть в диапазоне 0-59!");
        return false;
    end;

    if(not is_digit(substr(tm,10)))
        msgbox("В милисекундах есть недопустимые символы!");
        return false;
    end;

    if((ms < 0) or (ms > 99))
        msgbox("Милисекунды должны быть в диапазоне 0-99!");
        return false;
    end;

    return true;
end;

//Выбор типа документов
macro Get_mass_index(act, mas)
    var cnt, i;
    cnt = asize(mas);
    i=0;
    
    while (i<cnt)
        if(act == mas(i))
            return i;
        end;
        i = i + 1;
    end;
    
    return -1;
end; 


//Обновление записи в таблице
macro Update_usr_me_time(id, tb_include, timebegin, te_include, timeend, action, is_holiday)
    var rs, str;


    str = "UPDATE usr_me_time_op_dbt " +
          "   set t_timebegin = '" + timebegin + "' ," +
          "       t_timeend = '" + timeend + "' ," +
          "       t_action = '" + m_action(get_mass_index(action,name_action)) + "' , " ;

    if(tb_include == ">=") 
        str = str + " t_tb_include = 'X' ,";
    else
        str = str + " t_tb_include = chr(0) ,";
    end;

    if(te_include == "<=") 
        str = str + " t_te_include = 'X' ,";
    else
        str = str + " t_te_include = chr(0) ,";
    end;

    if(is_holiday == "X") 
        str = str + " t_is_holiday = '" + is_holiday + "' ";
    else
        str = str + " t_is_holiday = chr(0) ";
    end;

    str = str + " WHERE t_id = " + int(id);

    rs = rsdcommand(str);
    if(rs)
        rs.execute;
        return true;
    else 
        return false;
    end;
end;

//Следующее значение идентификатора в таблице
macro GetNextVal()
    var rs, str;
    str = "SELECT NVL (MAX (t_id), 0) id " +
          "  FROM usr_me_time_op_dbt " ;
    rs = trsbdataset(str);
    if (rs and rs.movenext)
        return int(rs.id + 1);
    end;

    return 1;
end;

//Вставка записи в таблицу
macro insert_usr_me_time(tb_include, timebegin, te_include, timeend, action, is_holiday)
    var rs, str;
    str = "INSERT INTO usr_me_time_op_dbt " +
          "       (t_timebegin, t_timeend, t_action, t_tb_include, t_te_include, t_is_holiday, t_id) " +
          "VALUES ('" + timebegin + "', '" + timeend + "','" + m_action(get_mass_index(action,name_action)) + "', " ;

    if(tb_include == ">=") 
        str = str + " 'X' ,";
    else
        str = str + " chr(0) ,";
    end;

    if(te_include == "<=") 
        str = str + " 'X' ,";
    else
        str = str + " chr(0) ,";
    end;

    if(is_holiday == "X") 
        str = str + " 'X', ";
    else
        str = str + " chr(0), ";
    end;

    str = str + GetNextVal() + " ) ";

    rs = rsdcommand(str);

    if(rs)
        rs.execute;
        return true;
    else 
        return false;
    end;
end;

//Удаление записи из таблицы
macro delete_usr_me_time(id)
    var rs, str;
    str = " delete from usr_me_time_op_dbt " +
          "  where t_id = " + id;

    rs = rsdcommand(str);

    if(rs)
        rs.execute;
        return true;
    else 
        return false;
    end;            
end;

