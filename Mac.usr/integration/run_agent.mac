/*Обработчик диалоговой панели ввода исходных данных*/
MACRO Event (dlg, cmd, id, key)

      if(cmd == DLG_INIT)
        // Имя канала из настройки
        if (strlen(pipename)==0)
          GetRegistryValue("COMMON\\PIPELISTENER\\PIPENAME",2,pipename);
        end;
        dlg.rec[0]=pipename;
        // Макрос
        // Слишком долгая компиляция - придёться импортировать сразу один и тот же :(
        //if (strlen(macname)==0)
          DisableFields(dlg,1);
          macname="rsbank_pipe_server.mac";
        //end;
        dlg.rec[1]=macname;
        // Флаг
        if (strlen(UseTimeoutText)==0)
          GetRegistryValue("COMMON\\PIPELISTENER\\USETIMEOUT",0,usetimeout);
        end;
        if (usetimeout)
          dlg.rec[2]="X";
          EnableFields(dlg,3);
        else
          dlg.rec[2]="";
          DisableFields(dlg,3);
        end;
        // Время
        GetRegistryValue("COMMON\\PIPELISTENER\\TIMEOUT",0,timeout);
        dlg.rec[3]=timeout;
        UpdateFields(dlg);
      end;

      if (cmd==DLG_KEY)
        if (KEY==KEY_ESC)
          return CM_CANCEL;
        elif (KEY==KEY_F2)
          return CM_SAVE;
        elif (KEY==KEY_SPACE)
          if(id==2)
            if (dlg.rec[2]=="X")
              dlg.rec[2]="";
              DisableFields(dlg,3);
            else
              dlg.rec[2]="X";
              EnableFields(dlg,3);
            end;
            UpdateFields(dlg);
          end;
        end;
        return CM_DEFAULT;
      end;
END;

macro get_request()
   
  var cmd = RSDCommand("{? = call usr_get_message(?,?,?)}"); // Так-то может использовать дистрибутивную?
   
  cmd.addparam("stat", RSDBP_RETVAL, V_INTEGER );
  cmd.addparam("pipename", RSDBP_IN, pipename);
//  cmd.param("pipename").value =  pipename;
  cmd.addparam("returnpipe", RSDBP_OUT, V_STRING);
  cmd.addparam("message", RSDBP_OUT, V_STRING);
   
  cmd.execute();

  MsgSender = cmd.param("returnpipe").value;
  MsgValue  = cmd.param("message").value;
end;

/*Обработчик панели обработчика*/
MACRO EventAgent (dlg, cmd, id, key)
      var i=0;
          dlg.rec[1]=i;
          dlg.rec[0]="Канал \""+pipename+"\". Ожидание сообщения..."; 
          UpdateFields(dlg);
      if(cmd == DLG_INIT)
        while(true)
          dlg.rec[1]=i;
          dlg.rec[0]="Канал \""+pipename+"\". Ожидание сообщения..."; 
          UpdateFields(dlg);
          testevent(1);
          get_request;
          dlg.rec[0]="Канал \""+pipename+"\". Обработка сообщения..."; 
          UpdateFields(dlg);
          testevent(1);
//          ExecMacroFile(macname, "processMessage", MsgSender, MsgValue, pipename);
          processMessage(MsgSender, MsgValue);
          i=i+1;
        end;
      end;
END;

