                     "                      (SELECT   T_BANKCODE " +
                     "                         FROM   DPMPROP_DBT " +
                     "                        WHERE   T_PAYMENTID = P.T_PAYMENTID AND T_DEBETCREDIT = 1)) " +
                     "               AND REGEXP_LIKE ( " +
                     "                          '\\s' || LOWER (PR.T_GROUND), " +
                     "                          '(ß†‡.{0,}Ø´†‚†|ß†‡†°Æ‚≠.{0,}\\sØ´†‚.{0,}|ß†‡Ø´†‚.{0,}|ß/Ø|†´®¨•≠‚.{0,}|†¢†≠·.{0,}|ßØ|_ßØ_|ØÆ·Æ°®.{0,}|·‚®Ø•≠§.{0,}|°•‡•¨•≠≠Æ·‚.{0,}|Ø•≠·.{0,})' " +
                     "                       ))), 0) x FROM   DUAL " );
   cmd.AddParam("", RSDBP_IN, PID);
   rs = RSDRecordSet(cmd);
   rs.movenext();
   return rs.value(0);
 END;

