/* Тип величины enum SfBaseTypes*/
private const   SF_BASETYPE_SUM     = 1;      /* Сумма*/
private const   SF_BASETYPE_QUONT   = 2;      /* Количество*/

private const NATCUR = 0;
record sfbassum( "sfbassum.str" );
record sfcontr( sfcontr );

/*Расчет для периодических комиссий*/
/* EVG Добавил приём структуры sfcontr для вызова из макроса sfacrpay.mac */
macro CalcServiceSum( sfcontr_addr/*Договор обслуживания*/, BeginDate/*Начало периода*/, EndDate/*Конец периода*/,
      sAddr /* EVG Какой-то ещё адрес */, sfcontrStruc /*Cтруктура sfcontr*/, CommNumber )
    var stat;
    var CommQuont = 0;
    var rrstat, upkstat;
    var ComCode = "2.2.2";
  
    if (fgbank.is_VUZ)
        ComCode = "2.2.4";
    end;
  
  var period = 6; // Комиссия полугодовая

  if ( ValType (sfcontr_addr) != V_UNDEF )
     SetBuff( sfcontr, sfcontr_addr );
  else
     Copy ( sfcontr, sfcontrStruc );
  end;

    rrstat = ExecMacroFile ("Commisslib.mac", "CheckCatOnAcc", sfcontr.PARTYID);
  debugbreak;
    if ((rrstat == 1) or (rrstat == 222))
  //  if (BeginDate <= {curdate}) // 29.07.2013 joy проверка не нужна
        CommQuont = 1;
        /*joy R-221409 Проверяем, прошло ли 6 мес. с окончания предыдущ. УПК*/
        upkstat = ExecMacroFile ("Commisslib.mac", "CheckPreviousUPK", ComCode, sfcontr.ID, period, EndDate);
        if (not (upkstat))
            CommQuont = 0;
        end;
    end;
        /*end joy*/

  
  /* EVG При вызове из sfacrpay.mac возвращаем true в случае положительного результата расчёта */
  if ( ValType (sfcontrStruc) != V_UNDEF )
     if (CommQuont > 0)
        return true;
     end;
     return false;
  end;
 
  ClearRecord(sfbassum);

  sfbassum.baseType = SF_BASETYPE_QUONT;
  sfbassum.baseQuont  = CommQuont;

  sfbassum.baseType2 = SF_BASETYPE_QUONT;
  sfbassum.baseQuont2  = CommQuont;

  stat = InsertSumList(sfbassum);

  if( stat )
    MsgBox("Ошибка при вставке базовой суммы");
  end;

    
end;/*CalcServiceSum*/

