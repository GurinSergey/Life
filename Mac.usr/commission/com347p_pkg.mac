import sfinter, ctinter, cb_sql;
import lib_comiss_common;

var MacroError :integer = 0;
private var FICode_calc:string = "";

private const   SF_BASETYPE_SUM     = 1;      /* Сумма*/
private const   SF_BASETYPE_QUONT   = 2;      /* Количество*/

private const NATCUR = 0;
record sfbassum( "sfbassum.str" );

var AnalizeTime = 1; //меньше указанного времени

/* EVG Добавил приём структуры sfcontr для вызова из макроса sfacrpay.mac */
macro CalcServiceSum( sfcontr_addr/*Договор обслуживания*/, BeginDate/*Начало периода*/, EndDate/*Конец периода*/,
      sAddr /* EVG Какой-то ещё адрес */, sfcontrStruc /*Cтруктура sfcontr*/ )
    record sfcontr( sfcontr );
    var cmd, stat;
    var CommQuont   = 0,
        CommSum     = $0;
    var retVal, Attrid, Code, Num;
    //var LifeBics = "044525986, 046311808, 046577781, 042908701, 044583859, 040702756, 042007755, 047308902, 041806835, 046577859";
    var LifeBics = getBICsBanks();

    /* EVG При вызове из sfacrpay.mac используем полученную структуру sfcontrStruc вместо адреса sfcontr_addr */
    if ( ValType (sfcontr_addr) != V_UNDEF )
       SetBuff( sfcontr, sfcontr_addr );
    else
       Copy ( sfcontr, sfcontrStruc );
    end;
    debugbreak;
    cmd = RSDCommand("begin usr_comiss_prbb_347.get_comm_info (?,?,?,?,?,?,?,?); end;");
    cmd.addParam("", RSDBP_IN,  sfcontr.Object);
    cmd.addParam("", RSDBP_IN,  2);
    cmd.addParam("", RSDBP_IN,  BeginDate);
    cmd.addParam("", RSDBP_IN,  EndDate);
    cmd.addParam("", RSDBP_IN,  null);
    cmd.addParam("", RSDBP_IN,  AnalizeTime);
    cmd.addParam("", RSDBP_IN,  LifeBics);
    cmd.addParam("", RSDBP_OUT, V_STRING,1024);
    cmd.execute();

    CommQuont = substr(cmd.param(7).value,1,index(cmd.param(7).value,"$")-1);
    
    /* EVG При вызове из sfacrpay.mac возвращаем true в случае положительного результата расчёта */
    if ( ValType (sfcontrStruc) != V_UNDEF )
       if (CommQuont > 0)
          return true;
       end;
       return false;
    end;


    ClearRecord(sfbassum);

    sfbassum.baseType    = SF_BASETYPE_QUONT;
    sfbassum.baseQuont   = CommQuont;

    sfbassum.baseType2   = SF_BASETYPE_QUONT;
    sfbassum.baseQuont2  = CommQuont;
    sfbassum.baseSum2    = CommSum;

    stat = InsertSumList(sfbassum);

    if( stat )
      MsgBox("Ошибка при вставке базовой суммы");
    end;
end;