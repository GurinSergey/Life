private const   SF_BASETYPE_QUONT   = 2;      /* Количество*/

record sfbassum( "sfbassum.str" );
record paym(pmpaym);


CONST CommLimit_Min = $0,
      CommLimit_Max = $500000;
//Тихомиров Исправленна сумма по заявке Tr-00072058

