/*
    Расчет для единовременных комиссий
*/
/* EVG Добавил приём структуры sfcontr для вызова из макроса sfacrpay.mac */
macro CalcCommissionSum( docKind/*Тип первички*/, Doc/*Буфер первички*/, sfcalcalusr_addr/*Алгоритм расчета*/, sfcontr_addr /*Договор обслуживания*/, beginDate, endDate  )
    record sfclusr( "sfclusr.str" );
    record sfcontr( sfcontr );
    record sfcalcal(sfcalcal);
    record cashDoc(pscshdoc);

    SetBuff( sfcalcal, sfcalcalusr_addr );
    SetBuff( sfcontr, sfcontr_addr );
    SetBuff( cashDoc, Doc );

    var stat,DrawSum = $0, DrawSumPM = $0, PaymentSum = $0;
    var CommQuont   = 0,
        CommSum     = $0;
    var query, rs, sql, cmd,TPNumber, NewAlg;
    const NumberTP1 = 107; // Тарифные планы для которых используется отдельный алгоритм.
    const NumberTP2 = 108; // Тарифные планы для которых используется отдельный алгоритм.
    debugbreak;
    rs    = null;
    sql   = null;
    cmd   = null;
    /*Проверим к какому ТП привязан ДО*/
    sql = " select d.t_sfplanid " +
          "   from dsfcontrplan_dbt d " +
          "  where d.t_sfcontrid = ? and t_end = to_date ( '01.01.0001', 'dd.mm.yyyy' )";
    cmd = rsdcommand(sql);
    cmd.AddParam("", RSDBP_IN,sfcontr.id); //Id ДО
    rs = rsdRecordSet(cmd);
       
    if (rs and rs.moveNext() )
       TPNumber = rs.value("t_sfplanid");
    else
        MsgBox("На нейден Тарифный план для договора обслуживания " + sfcontr.object);
    end;
    
    //RR Определяем по какому алгоритму будем считать.
 if ( (TPNumber == NumberTP1) or (TPNumber == NumberTP2) )
    NewAlg = true;
 end;
 
    DrawSumPM   = Vuz_SumSymb_Payment( cashDoc.Autokey, 
                                            DRDIR_NOT );
                                               
    PaymentSum  =  Vuz_SumSymb_StartMonth( sfcontr.Object,
                                           endDate,
                                           cashDoc.DocKind,
                                           DRDIR_NOT,
                                           NewAlg);

    DrawSum = DrawSumPM + PaymentSum;
    /************************************************************/
    /*Определяем глобальные параметры для их дальнейшей передачи*/
    SetGlobalParameter("DrawSum58", DrawSum);
    SetGlobalParameter("DrawSumPM58", DrawSumPM);
    SetGlobalParameter("PaymentSum58", PaymentSum);
    /************************************************************/

    if ( DrawSumPM > $0 )
       /* EVG Комиссия взимается прогрессивно: 
          - сумма базы рассчитывается как общая сумма снятия, превышающая нижнюю границу лимита
          - если сумма базы больше лимита, комиссия взимается с суммы верхней границы лимита. */
       if (PaymentSum <= CommLimit_Max)
         if(PaymentSum == $0)
           if(DrawSumPM <= CommLimit_Max)
             CommSum = DrawSumPM;
           else
             CommSum = CommLimit_Max;
           end;
         else
           if(DrawSum <= CommLimit_Max)
             CommSum = DrawSumPM;
           else
             CommSum = CommLimit_Max - PaymentSum;
           end;
         end;
       else
         CommSum = $0;
       end;
    end;
//VV C-25244   
    var  quer="SELECT   CAT.T_OBJECT "+
            "FROM   dobjatcor_dbt cat "+
            "WHERE   CAT.T_GROUPID = 1023 "+
            " AND CAT.T_OBJECTTYPE = 501 "+
            " and CAT.T_OBJECT=" +cashDoc.AutoKey ;
    var  qrs=TRsbDataSet(quer);

     if(qrs.movenext)
     debugbreak;
       CommSum=$0;
     end;  
//VV C-25244 
    ClearRecord(sfbassum);

    sfbassum.baseType    = SF_BASETYPE_SUM;
    sfbassum.baseSum     = CommSum;

    sfbassum.baseType2   = SF_BASETYPE_SUM;
    sfbassum.baseSum2    = CommSum;

    stat = InsertSumList(sfbassum);

    if( stat )
      MsgBox("Ошибка при вставке базовой суммы");
    end;

    
end;/*CalcServiceSum*/








