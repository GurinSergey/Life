macro ОтправкаВсехУведомлений

   var pdate = {curdate};
   var rub, kop,CURtext;

   var depi = "";
   var rs1, cm1, dep = "0";

   if (not(getDate(pdate,"Укажите дату зачисления на счет")))
     exit(1);
   end;
   
   if (not(getstring(dep,"Укажите подразделение (0 - Весь банк)", 3)))
     exit(1);
   else
   
     if (dep > 0)
      cm1 = rsdcommand("select t_code from ddp_dep_dbt where t_name = ?");
      cm1.addparam("name", RSDBP_IN, dep);
      rs1 = rsdrecordset(cm1);
      if (rs1.movenext())
        depi = "and ac.t_branch = "+rs1.value(0);
      end;
     end;

   end;

   private var rs, cmd;
   cmd = RSDCommand("select   pm.t_paymentid, ad.t_date_carry t_valuedate, " +
//                    "         pm.t_receiveraccount, " +
                    "         ad.t_account_receiver t_receiveraccount, " +
//                    "         pmr.t_receivername, " +
                    "         pt.t_name as t_receivername, " +       // Тихомиров А.Н. Имя для получателя не из платежа а из party_dbt
                    "         pm.t_payamount, " +
                    "         pm.t_receiver, " +
                    "         fi.t_iso_number, " +
                    "         pmr.t_receiverbankname " +
                    "  from   dpmpaym_dbt pm, " +
                    "         dpmrmprop_dbt pmr, " +
                    "         dpmdocs_dbt pmd, " +
                    "         darhdoc$_dbt ad, " +
                    "         daccount$_dbt ac, " +
                    "         dparty_dbt pt, " +
                    "         dfininstr_dbt fi " +
                    " where       pm.t_dockind in (320, 322, 27) " +
                    "         and pm.t_FIID_FutureRecAcc <> 0 " +
                    "         and pm.t_paymentid = pmr.t_paymentid " +
                    "         and ad.t_date_carry = ? " +
                    "         and ac.t_code_currency = pm.t_FIID_FutureRecAcc " +
                    "         and ac.t_chapter = 1 " +
                    "         and ac.t_type_account like '%Y%' " +
                    //"         and ac.t_usertypeaccount  like '%Ё%' " +
                    "         and fi.t_fiid = pm.t_FIID_FutureRecAcc " +
                    "         and pt.t_partyid = ac.t_client " +depi +
                    "         and pt.t_notresident = chr (0) " +
                    "         and pmd.t_paymentid = pm.t_paymentid " +
                    "         and ad.t_applicationkey = pmd.t_applicationkey " +
                    "         and ad.t_account_receiver = ac.t_account " +
                    "         and ad.t_chapter = 1 " +
                    "         and ad.t_code_currency = pm.t_FIID_FutureRecAcc "
                    );
   //msgbox(cmd.cmdtext);
   cmd.addparam("pdate", RSDBP_IN, pdate);
   rs = RSDRecordset(cmd);

   setoutput(fulloutput,false);
   setoutput(null,true);

   while (rs.moveNext())

      CURtext    = CurToStrAlt(money(rs.value("t_payamount")), rub, kop, rs.value("t_iso_number"), false); 
      ОтправкаУведомления(date(rs.value("t_valuedate")),rs.value("t_receiveraccount"),rs.value("t_receivername"),money(rs.value("t_payamount")),
                    SubStr(CURtext, StrLen(rub)+1, Index(CURtext,kop)-Strlen(rub)-1), CURtext,
                    DateAfterWorkDays(date(rs.value("t_valuedate")),8), rs.value("t_receiverBankname"), rs.value("t_paymentid"), true, rs.value("t_receiver"));

   end;

end;


macro ОтправкаВсехИзвещений

   var pdate = {curdate};
   var rub, kop,CURtext;
   var depi = "";
   var rs1, cm1, dep = "0";

   if (not(getDate(pdate,"Укажите дату зачисления на счет")))
     exit(1);
   end;

   if (not(getstring(dep,"Укажите подразделение (0 - Весь банк)", 3)))
     exit(1);
   else
   
     if (dep > 0)
      cm1 = rsdcommand("select t_code from ddp_dep_dbt where t_name = ?");
      cm1.addparam("name", RSDBP_IN, dep);
      rs1 = rsdrecordset(cm1);
      if (rs1.movenext())
        depi = "and ac.t_branch = "+rs1.value(0);
      end;
     end;

   end;

   private var rs, cmd;
   cmd = RSDCommand("select   pm.t_paymentid, ad.t_date_carry t_valuedate,  " +
                    "         pm.t_payeraccount,  " +
                    "         pm.t_receiveraccount,  " +
                    "         pmr.t_receivername,  " +
                    "         pm.t_payamount,          " +
                    "         pmr.t_receiverbankname,  " +
                    "         pm.t_receiver  " +
                    "  from   dpmpaym_dbt pm,  " +
                    "         daccount_dbt ac, " +
                    "         darhdoc_dbt ad, " +
                    "         dpmrmprop_dbt pmr,  " +
                    "         dpmdocs_dbt pmd       " +
                    " where   pm.t_dockind in (320, 322, 16)  " +
                    "         and pm.t_FIID_FutureRecAcc = 0  " +
                    "         and ad.t_account_receiver = ac.t_account " +
                    "         and pm.t_paymentid = pmr.t_paymentid  " +
                    //"         and ac.t_usertypeaccount like '%Ё%' "+
                    "         and ac.t_chapter = 1 " +depi +
                    "         and pmd.t_paymentid = pm.t_paymentid " +
                    "         and ad.t_applicationkey = pmd.t_applicationkey " +
                    "         and ad.t_date_carry = ?  " +
                    "         and pmd.t_paymentid = pm.t_paymentid  "
                    );
   cmd.addparam("pdate", RSDBP_IN, pdate);
   rs = RSDRecordset(cmd);

   setoutput(fulloutput,false);
   setoutput(null,true);

   while (rs.moveNext())

      if (ISPayerNerezAcc(rs.value("t_payeraccount")))
            CURtext    = CurToStrAlt(money(rs.value("t_payamount")), rub, kop, 810); 
            ОтправкаИзвещения(rs.value("t_receiveraccount"),rs.value("t_receivername"),money(rs.value("t_payamount")), SubStr(CURtext, StrLen(rub)+1, Index(CURtext,kop)-Strlen(rub)-1), 
            CURtext, rs.value("t_paymentid"), true, rs.value("t_receiver"), pdate);
      end;
   end;

end;


