Macro ПечатьУведомления(Doc_date,Account_num,Client_Name,Value,Currency_str,Value_str,Reply_date, BankName, paymentid, ismassprint, NeedPrintLog)
   debugbreak;
   if ((NeedPrintLog) or (valtype(NeedPrintLog) == V_UNDEF))
     setoutput(fulloutput,ismassprint);
   end;
   debugbreak;
   var rs, cmd;
   var PmObj = RsbPayment(paymentid);

   /* A.Gregeradsky - 09.12.2009 - Поиск транзитного счета для зачисления валюты резиденту по платежу. Доработка выполнена по запросу пользователя от 09.12.2009 */
   if((PmObj.dockind == 320) and (PmObj.BaseFIID != 0))
      Account_Num = ТранзитныйСчетЗачисленияИзПроводки(paymentid, Account_Num);
   end;
   /* End Gregeradsky */

   InsTrnsfNotify( paymentId, true );
   if ((NeedPrintLog) or (valtype(NeedPrintLog) == V_UNDEF))
     println(ТекстУведомления(Client_name, paymentid, Currency_str, Value, Value_str, Account_Num, Doc_date, Reply_date ));
     if (ismassprint)
        println("");
     end;

     SetOutput(null,true);
     if (not(ismassprint))
        viewfile(fulloutput);
     end;
   end;
end;  

