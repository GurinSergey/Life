macro ПечатьВсехУведомлений(for_send, NotifyDate, NeedAskDepartment, NeedPrintLog)
   debugbreak;
   var pdate = {curdate};
   var rub, kop,CURtext, case="";
   var depi = "";
   var rs1, cm1, dep = "0";
   
   if (valType(NotifyDate) == V_UNDEF)
     if (not(getDate(pdate,"Укажите дату зачисления на счет")))
       exit(1);
     end;
   else
     pdate = NotifyDate;
   end;
   
   if ((NeedAskDepartment) or (valType(NeedAskDepartment) == V_UNDEF))
     if (not(getstring(dep,"Укажите подразделение (0 - Весь банк)", 3)))
       exit(1);
     else
       if (dep > 0)
        cm1 = rsdcommand("select t_code from ddp_dep_dbt where t_name = ?");
        cm1.addparam("name", RSDBP_IN, dep);
        rs1 = rsdrecordset(cm1);
        if (rs1.movenext())
          depi = "and ac.t_branch = "+rs1.value(0);
        end;
       end;
     end;
   end;
   
   if (for_send)
//      case = "  and ac.t_usertypeaccount like '%Ё%' ";
   end;

   private var rs, cmd, srok;

   cmd = RSDCommand("select   pm.t_paymentid, trn.t_date_carry t_valuedate, " +
                    "         trn.t_account_receiver t_receiveraccount, " +
                    "         pt.t_name as t_receivername, " +       // Тихомиров А.Н. Имя для получателя не из платежа а из party_dbt
                    "         pm.t_payamount, " +
                    "         fi.t_iso_number, " +
                    "         pmr.t_receiverbankname " +
                    "  from   dpmpaym_dbt pm, " +
                    "         dpmrmprop_dbt pmr, " +
                    "         dpmdocs_dbt pmd, " +
                    "         dacctrn_dbt trn, " +
                    "         daccount_dbt ac, " +
                    "         dparty_dbt pt, " +
                    "         dfininstr_dbt fi " +
                    " where       pm.t_dockind in (320, 322, 27, 202, 70) " + //Gurin S. 01.04.2015 R-565267-2 Добавил МО
                    "         and pm.t_FIID_FutureRecAcc <> 0 " +
                    "         and pm.t_paymentid = pmr.t_paymentid " +
                    "         and trn.t_date_carry = ? " +
                    "         and trn.t_fiid_receiver = pm.t_FIID_FutureRecAcc " +
                    "         and trn.t_chapter = 1 " +
                    "         and ac.t_type_account like '%Y%' " + case +
                    "         and fi.t_fiid = pm.t_FIID_FutureRecAcc " + depi +
                    "         and pt.t_partyid = ac.t_client " +
                    "         and pt.t_notresident = chr (0) " +
                    "         and pmd.t_paymentid = pm.t_paymentid " +
                    "         and trn.t_acctrnid = pmd.t_acctrnid " +
                    "         and trn.t_account_receiver = ac.t_account " +
                    "         and trn.t_chapter = 1 " +
                    "         and trn.t_fiid_receiver = pm.t_FIID_FutureRecAcc "
                    );
   cmd.addparam("pdate", RSDBP_IN, pdate);
   rs = RSDRecordset(cmd);
   
   if ((NeedPrintLog) or (valType(NeedPrintLog) == V_UNDEF))
     setoutput(fulloutput,false);
     setoutput(null,true);
   end;
   
   while (rs.moveNext())

      debugbreak; //DAI по I-00012216
      srok = date(rs.value("t_valuedate"));
      if (srok > date("26.02.2011"))
         srok = DateAfterWorkDays(srok, 15);//TAM R-50392
      else
         srok = DateAfterWorkDays(srok, 8);
      end;

      CURtext    = CurToStrAlt(money(rs.value("t_payamount")), rub, kop, int(rs.value("t_iso_number")), false); 
      ПечатьУведомления(date(rs.value("t_valuedate")),rs.value("t_receiveraccount"),rs.value("t_receivername"),money(rs.value("t_payamount")),
                    SubStr(CURtext, StrLen(rub)+1, Index(CURtext,kop)-Strlen(rub)-1), CURtext,
                    srok, rs.value("t_receiverBankname"), rs.value("t_paymentid"), true, NeedPrintLog);
                    //DateAfterWorkDays(date(rs.value("t_valuedate")),8) 
   end;
   
   if ((NeedPrintLog) or (valType(NeedPrintLog) == V_UNDEF))
     viewfile(fulloutput);
   end;
   
end;


macro ПечатьВсехИзвещений(for_send, NotifyDate, NeedAskDepartment, NeedPrintLog)
   debugbreak;
   var pdate = {curdate};
   var rub, kop,CURtext, case = "";
   var depi = "";
   var rs1, cm1, dep = "0";

   if (valType(NotifyDate) == V_UNDEF)
     if (not(getDate(pdate,"Укажите дату зачисления на счет")))
       exit(1);
     end;
   else
     pdate = NotifyDate;
   end;

   if ((NeedAskDepartment) or (valType(NeedAskDepartment) == V_UNDEF))
     if (not(getstring(dep,"Укажите подразделение (0 - Весь банк)", 3)))
       exit(1);
     else
        if (dep > 0)
        cm1 = rsdcommand("select t_code from ddp_dep_dbt where t_name = ?");
        cm1.addparam("name", RSDBP_IN, dep);
        rs1 = rsdrecordset(cm1);
        if (rs1.movenext())
          depi = "and ac.t_branch = "+rs1.value(0);
        end;
       end;
     end;
   end;
   
   if (for_send)
//      case = "  and ac.t_usertypeaccount like '%Ё%' ";
   end;
   private var rs, cmd;
   /* EVG 28/1/2014 Адаптация под 2031 */
   cmd = RSDCommand("select   pm.t_paymentid, trn.t_date_carry t_valuedate,  " +
                    "         pm.t_payeraccount,  " +
                    "         trn.t_account_receiver t_receiveraccount,  " +
                    "         pmr.t_receivername,  " +
                    "         pm.t_amount,          " +
                    "         pmr.t_receiverbankname,  " +
                    "         pm.t_receiver,  " +
                    // EVG 16/08/2012 Для анализа основания
                    "         pmr.t_ground " +
                    "  from   dpmpaym_dbt pm,  " +
                    "         daccount_dbt ac, " +
                    "         dacctrn_dbt trn, " +
                    "         dpmrmprop_dbt pmr,  " +
                    "         dpmdocs_dbt pmd       " +
                    " where   pm.t_dockind              in (320, 322, 16, 201)  " +
                    "         and pm.t_FIID_FutureRecAcc = 0  " +
                    "         and trn.t_account_receiver = ac.t_account " +
                    "         and pm.t_paymentid         = pmr.t_paymentid  " + case +
                    "         and ac.t_chapter           = 1 " + depi +
                    "         and pmd.t_paymentid        = pm.t_paymentid " +
                    "         and trn.t_acctrnid         = pmd.t_acctrnid " +
                    "         and trn.t_date_carry       = ?  " +
                    "         and pmd.t_paymentid        = pm.t_paymentid  "
                    );

   cmd.addparam("pdate", RSDBP_IN, pdate);
   rs = RSDRecordset(cmd);

   if ((NeedPrintLog) or (valType(NeedPrintLog) == V_UNDEF))
     setoutput(fulloutput,false);
     setoutput(null,true);
   end;
   
   var  ReciverMask = "401*-407*, 40802*"; /*21-01-2013 joy I-00306892-3 добавлены маски, согл. с Севостьяновой О.Б.*/
   while (rs.moveNext())
   //debugbreak;
      //if (not ISPayerNerezAcc(rs.value("t_receiveraccount")))
      //TAM 18.10.2012 I-00270572-2
      /* 21-01-2013 Жаворонкова Н. (joy) I-00306892-3 добавлены маски, согл. с Севостьяновой О.Б.
      if( ( SubStr(rs.value("t_receiveraccount"),1,5) == "40802") or ( SubStr(rs.value("t_receiveraccount"),1,3) == "407")) */
      if ((CompareStrWithMasks (ReciverMask,  rs.value("t_receiveraccount")  ) == 0) )
      /* ----end joy*/
         if ( ISPayerNerezAcc(rs.value("t_payeraccount"))
           // EVG 16/08/2012 Для того, чтобы извещения печатались по документам с Дт. 30302 и кодом ВО в основании
         or ( index( rs.value("t_ground"), "{VO" ) > 0 ) )
            CURtext    = CurToStrAlt(money(rs.value("t_amount")), rub, kop, 810); 
            ПечатьИзвещения(rs.value("t_receiveraccount"),rs.value("t_receivername"),money(rs.value("t_amount")), SubStr(CURtext, StrLen(rub)+1, Index(CURtext,kop)-Strlen(rub)-1), CURtext, rs.value("t_paymentid"), true, pdate, NeedPrintLog);
         end;
      end;
      /* EVG 19/10/2011 Если счёт нерезидента - получатель, то просто добавим 
        уведомление в базу без вывода на печать (это нужно для оплаты комиссий). */
      if( ISPayerNerezAcc( rs.value("t_receiveraccount") ) )
         InsTrnsfNotify( rs.value("t_paymentid"));
      end;
   end;

   if ((NeedPrintLog) or (valType(NeedPrintLog) == V_UNDEF))
     viewfile(fulloutput);
   end;
   
end;