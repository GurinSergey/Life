macro GetClientNameByAcc(acnt)
   var SQL, cmd, rs;
   cmd = RsdCommand(  "SELECT PT.T_NAME " +
                      "  FROM daccount_dbt ac, dparty_dbt pt " +
                      " WHERE AC.T_ACCOUNT = ? AND AC.T_CLIENT = PT.T_PARTYID "
                  );
