/* A.Gregeradsky - 09.12.2009 - Доработка по запросу пользователя */
Macro ТранзитныйСчетЗачисленияИзПроводки(paymentid, acnt)
   var SQL, cmd, rs;

   cmd = RsdCommand(
                   "select trn.t_account_receiver" +
                   "  from dacctrn_dbt trn, dpmdocs_dbt pm, daccount_dbt acnt"+
                   " where pm.t_paymentid = ?"+ 
                   "   and trn.t_acctrnid = pm.t_acctrnid"+
                   "   and trn.t_account_receiver = acnt.t_account"+
                   "   and acnt.t_chapter = 1"+
                   "   and acnt.t_code_currency > 0"+
                   "   and instr(upper(acnt.t_type_account),'Y') != 0"
                   );

   cmd.AddParam("pm", RSDBP_IN, paymentid);
   rs = RsdRecordSet(cmd);

   if(rs.MoveNext())
      return rs.Value(0);
   else
      return acnt;
   end;
end;

/* EVG 5/03/2011 Получить номер уведомления по референсу */
Macro GetRefNumber( pmId )
  debugbreak;
  var stat, val;
  var rs, query;
  var isCur = false;

  // Определим валюту
  query = " Select t_BaseFiid From DPmPaym_dbt " +
          "  Where t_PaymentId = " + pmId;
  rs = rsdRecordSet( query );
  if ( rs and rs.MoveNext() )
     if ( rs.Value(0, null, V_INTEGER) > 0 )
        isCur = true;
     end;
  end;
  
  //Lavrenov: 29.05.2012 I-00200565-2 для ПРББ используем только 1 референс
  if(fdBank.is_PRBB)
     stat = GenerateReference( 1000030, val );
     val = val;
  else
     // Рубли
     if ( not isCur )
        stat = GenerateReference( 1000030, val );
        val = val;
     // Валюта
     else
        stat = GenerateReference( 1000031, val );
     end;
  end; 
  if ( stat != 0 )
     msgbox ("Ошибка формирования номера уведомления (референс № 1000023 или 1000024)");
     val = "xxx";
  end;

  return val;
end;



/* EVG 8/08/2012 Вставка уведомления вынесена в отдельную процедуру */
Macro InsTrnsfNotify( paymentId, isCur )
  var cmd, rs;

   /* EVG 23/03/2011 Возникла проблема: номера валютных и рублёвых уведомлений
      потенциально могут пересекаться (пересекутся сразу, если нумерация будет с 1).
      Поэтому для рублёвых уведомлений я создал отдельную таблицу usr_trnsf_notify_rur,
      полностью идентичную usr_trnsf_notify. Она будет использоваться только для сохране-
      ния номера уведомления, в других процессах она не задействована. */
   var tblName = "usr_trnsf_notify_rur";

   if ( isCur )
      tblName = "usr_trnsf_notify";
   end;

   //Lavrenov: 29.05.2012 I-00200565-2 для ПРББ используем только usr_trnsf_notify
   if((fdBank.is_PRBB) or (fdBank.is_VUZ))
      tblName = "usr_trnsf_notify";
   end;
   
   cmd = RSDCommand("select 1 from " + tblName + " where payment_id = ?");
   cmd.addparam("pmid", RSDBP_IN, paymentid);
   rs = RSDRecordset(cmd);

   if (not(rs.movenext))
      /* EVG 2.12.2010 Запрос даты уведомления */
      if ( needAskForDate )
         if ( getDate( newNtfDate, "Пожалуйста, введите дату формирования уведомлений:" ) )
            needAskForDate = false;
         end;
      end;
      cmd = RSDCommand("insert into " + tblName + " (notify_num,notify_date,payment_id) values (?,?,?)");
      cmd.addparam("notify_num",  RSDBP_IN,  GetRefNumber( paymentid ) );
      cmd.addparam("notify_date", RSDBP_IN,  newNtfDate);
      cmd.addparam("payment_id",   RSDBP_IN, paymentid );
      cmd.execute();

      printNtfDate = newNtfDate;
   else
      /* EVG Если уведомление уже есть, получим его дату */
      cmd = RSDCommand(" Select notify_date From " + tblName + " where payment_id = ? ");
      cmd.addparam("payment_id", RSDBP_IN, paymentid);
      rs = RSDRecordset(cmd);
      if ( rs and rs.MoveNext() )
         existingNtfDate = rs.Value(0, null, V_DATE);
      end;

      printNtfDate = existingNtfDate;
   end;

end;

