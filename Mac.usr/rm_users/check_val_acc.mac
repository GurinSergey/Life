import RSD,BankInter;
                           
macro IsAccValid(acc, msg, notresident)

   var clacc;
//   GetRegistryValue ("PS\\REQOPENACC\\СЧЕТА КЛИЕНТОВ",v_string,clacc);

   var cmd = RSDCommand(
   "select acc.t_open_close, acc.t_account, decode(pt.t_notresident, 'X','нерезидента','резидента') "+
   " kind_person, pt.t_notresident," +
   "       case pt.t_notresident " +
   "         when chr ( 0 ) " +
   "           then ( select t_account " +
   "                   from daccount_dbt " +
   "                  where t_account = acc.t_account " +
   "                    and t_chapter = acc.t_chapter " +
   "                    and t_code_currency = acc.t_code_currency " +
   "                    and t_type_account like '%Y%' /*or substr ( t_account, 14, 1 ) = '1' )*/) " +
   "         when 'X' " +
   "           then ( select t_account " +
   "                   from daccount_dbt " +
   "                  where t_account = acc.t_account " +
   "                    and t_chapter = acc.t_chapter " +
   "                    and t_code_currency = acc.t_code_currency " +
   "                    and t_type_account like '%X%' ) " +
   "       end t_account_pm" +
   "  from dparty_dbt pt, daccount_dbt acc " +
   " where acc.t_account = ? and pt.t_partyid = acc.t_client "
                        );
   var rs;
 

//   if  ((acc == "") or (CompareStrWithMasks (clacc,Acc) == 1))  //счетПол-не клиентский*/
   if  ((acc == "") or (CompareStrWithMasks ("405-407, 40802*",Acc) == 1))  //счетПол-не клиентский*/ //A53334
      return true;
   elif (CompareStrWithMasks("301-303",acc) == 0)
      return true; //на корсчета зачислять можно
   else

      cmd.addparam("acc",RSDBP_IN, acc);
      rs = RSDRecordset(cmd);

      if (rs.movenext)
         if (rs.value("t_open_close") == "З")
            setparm(1,"счет получателя "+acc+" закрыт");
            return false;
         elif (rs.value("t_account")!=rs.value("t_account_pm"));
            setparm(1,"счет для зачисления средств на счет "+rs.value("kind_person")+" неверный");
            return true;
         end;
         setparm(2, rs.value("t_notresident"));
      else
         setparm(1,"счет получателя "+acc+" не найден");
         return false;
      end;

      return true;
   
   end;
end;//macro

macro get_valid_accounts (account, fiid, notresident)
   var cmd, rs, i=0;
   var acc = Tarray();
       
   if (notresident == "X")
      cmd = RSDCommand(
      "select ac1.t_account  " +
      " from daccount_dbt ac1, daccount_dbt ac2   " +
      " where ac2.t_account = ? " +
      " and ac2.t_code_currency = ? " +
      " and ac2.t_code_currency = ac1.t_code_currency " +
      " and ac2.t_client = ac1.t_client " +
      " and ac1.t_type_account like '%X%' " 
                      );
   else
      cmd = RSDCommand(
      "select ac1.t_account  " +
      " from daccount_dbt ac1, daccount_dbt ac2   " +
      " where ac2.t_account = ? " +
      " and ac2.t_code_currency = ? " +
      " and ac2.t_code_currency = ac1.t_code_currency " +
      " and ac2.t_client = ac1.t_client " +
      " and  ac1.t_type_account like '%Y%' /*or substr ( ac1.t_account, 14, 1 ) = '1' ) */ "
                      );
   end;

   cmd.addparam("acc",RSDBP_IN, account);
   cmd.addparam("fiid",RSDBP_IN, fiid);

   rs = RSDRecordset(cmd);

   while (rs.movenext)
      acc(i) = rs.value("t_account");
      i = i + 1;
   end;

   if (i == 0)
      acc(0) = "нет доступных счетов";   
   end;
   
   return acc;  
end;

// Tikh
macro typeacc(acc)
   var cmd = rsdcommand ("select count ( rowid ) as cnt "+
   " from daccount_dbt "+
   " where t_account = ? and t_usertypeaccount like '%Й%'");
   cmd.addparam ("acc", rsdbp_in,acc);
   var rs = rsdrecordset(cmd);
   if (rs.movenext())
      if (rs.value(0)>0)
       return true;
      end;
   end;
   return false;
END;

macro innacc(acc)
   var cmd = rsdcommand ("select t_code "+
     " from daccount_dbt acc, dobjcode_dbt code "+
    " where acc. t_account = ?  "+
    " and acc.t_client = code.t_objectid "+
    " and code.t_codekind=16 and code.T_OBJECTTYPE=3");

   cmd.addparam ("acc", rsdbp_in,acc);
   var rs = rsdrecordset(cmd);
   if (rs.movenext())
      return rs.value(0);
   end;
   return 0;
END;

macro corracc(acc)
   var cmd = rsdcommand ("select count(*) as cnt "+
    " from dcorschem_dbt where t_account like ?");

   cmd.addparam ("acc", rsdbp_in,acc);
   var rs = rsdrecordset(cmd);
   if (rs.movenext())
      if (rs.value(0)>0)
         return 1;
      end;
   end;
   return 0;
END;


