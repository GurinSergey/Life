import rsd, pm_note;

/* A.Gregeradsky - 25.11.2009 - Редактирование примечания вида kind для платежа */
Macro edit_paymnote(pmid, kind)

var str, new_str, stat, old_str;

str = ReadNoteForPayment(pmid, kind);
old_str = str;

GetString(str);

  if(str != old_str)
    if(GetTrue(False, "Произвести изменения!"))
      stat = InsertNoteForPayment(pmid, kind, str);
      if(stat == 0)
        MsgBox("Изменение выполнено!")
      else
        MsgBox("Изменение не выполнено!")
      end;
    else
      MsgBox("Изменение отменено!")
    end;
  end;

end;


/* Сохранение первоначального назначения - для документов, где оно может измениться (с кодом ВО или паспортом сделки) */
Macro SaveStartGroundInNote(pmid, ground)

InsertNoteForPayment(pmid, 1000, ground);

end;


/* Удаление превоначльного назначения платежа - если оно больше не нужно */
Macro DeleteStartGroundOut(pmid) 

var cmd;

cmd = RsdCommand("DELETE FROM dnotetext_dbt WHERE t_objecttype = ? AND t_documentid = lpad(?,10,'0') AND t_notekind = ?");

cmd.AddParam("objtype", RSDBP_IN, "501");   /* Вид объекта - 501 */
cmd.AddParam("docid", RSDBP_IN, pmid);      /* ID объекта */
cmd.AddParam("notekind", RSDBP_IN, "1000"); /* Вид примечания - 1000 */

cmd.Execute();

end;

/*
Возврат первоначального назначения, если оно было изменено 
(для документов с кодом ВО или паспортом сделки основание изменяется автоматически данными из доп.реквизитов ВО)
*/
Macro ReturnStartGroundBack(PmObj)
var str;

str = ReadNoteForPayment(PmObj.PaymentID, 1000);

  if ( (strlen(trim(str)) != 0) and (trim(strupr(str)) != trim(strupr(PmObj.Ground)) ) )
    PmObj.Ground = str;
  end;

/*  DeleteStartGroundOut(PmObj.PaymentID);*/

end;

