    private var rs, cmd;
    /*Gurin S. 30.01.2014 Адаптация 2031
    cmd = RSDCommand("select   pm.t_paymentid, ad.t_date_carry t_valuedate,  " +
                     "         nvl(pm.t_payeraccount, ' ') t_payeraccount,  " +
                     "         pm.t_receiveraccount,  " +
