                     "         pmr.t_receivername,  " +
                     "         pmr.t_payername,  " +
                     "         pm.t_payamount,          " +
                     "         pmr.t_receiverbankname,  " +
                     "         pm.t_receiver  " +
                     "  from   dpmpaym_dbt pm,  " +
