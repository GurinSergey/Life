end;

var notice: TArray = TArray();

macro Protocol(subject)
    var reportName = getTxtFileName ("trn_order_send_notify");
    var table = CTableReport();
    var i=0;

    setoutput(reportName,false);
    println (string ("Отчет о выполнении процедуры \"", subject,"\""):c:100);
    println (string ("                           Дата - ", date, ", время - ", time):c:70);

    table.addColumn ("Номер счета",  22,  AL_LEFT);
    table.addColumn ("Описание",     50, AL_LEFT);

    table.printHead ();

    while (i < notice.size ())
        table.printStringTransferByWord(notice[i].m_Account_Num, notice[i].m_description);
        i = i + 1;
    end;

    table.printSeparator ();
    table.printStringTransferByWord ("Всего файлов:", i);
    table.printBottom ();
    SetOutput (NULL, true);
    viewfile(reportName);
end;

Macro ISBorw(account_num)
    private var cmd, rsd;
    cmd = rsdcommand("select count(*) as cnt from daccount_dbt where t_usertypeaccount like '%Ё%' and t_account = ?");
    cmd.addparam ("account",RSDBP_IN,account_num);
    cmd.execute();

    rsd = rsdrecordset(cmd);
    if (rsd.movenext() and (rsd.value(0)>0)) return 1; end; 
    return 0;
end;

